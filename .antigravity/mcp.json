{
    "mcpServers": {
        "postgres": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "POSTGRES_URL",
                "mcp/postgres",
                "$POSTGRES_URL"
            ],
            "env": {
                "POSTGRES_URL": "postgresql://l2c_user:l2c_dev_password@host.docker.internal:5433/l2c_dev"
            }
        }
    }
}