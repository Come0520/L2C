# ========================================
# L2C 环境变量模板 (复制为 .env 使用)
# ========================================

# 数据库配置
DATABASE_URL="postgresql://l2c_user:YOUR_PASSWORD@postgres:5432/l2c?schema=public"
POSTGRES_DB=l2c
POSTGRES_USER=l2c_user
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# 认证配置
AUTH_SECRET="YOUR_AUTH_SECRET_KEY_AT_LEAST_32_CHARS"
AUTH_TRUST_HOST=true

# 应用配置
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NODE_ENV=production

# 阿里云 OSS (可选)
# ALIYUN_OSS_ACCESS_KEY_ID=
# ALIYUN_OSS_ACCESS_KEY_SECRET=
# ALIYUN_OSS_BUCKET=
# ALIYUN_OSS_REGION=oss-cn-hangzhou

# OSS 备份 Bucket (建议与业务 Bucket 分开，启用版本控制)
# OSS_BACKUP_BUCKET=l2c-backups

# AI 配置 (可选)
# QWEN_API_KEY=
