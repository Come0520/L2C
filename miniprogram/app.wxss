/**
 * L2C 小程序全局样式 - 简洁专业版
 * 与 Web 落地页统一的蓝紫渐变设计系统
 */

/* ========== 设计令牌 (Design Tokens) ========== */
page {
  /* 品牌色 - 蓝紫渐变系 (与落地页一致) */
  --brand-primary: #2563EB;    /* blue-600 主色 */
  --brand-indigo: #4F46E5;     /* indigo-600 渐变终点 */
  --brand-light: #EFF6FF;      /* blue-50 浅底色 */
  --brand-hover: #1D4ED8;      /* blue-700 悬浮态 */
  --brand-100: #DBEAFE;        /* blue-100 */

  /* 页面 & 卡片 */
  --bg-page: #F8FAFC;          /* slate-50 页面底色 */
  --bg-card: #FFFFFF;          /* 卡片底色 */
  --bg-section: #F3F4F6;       /* gray-100 分区底色 */

  /* 文字 */
  --text-heading: #111827;     /* gray-900 标题 */
  --text-body: #4B5563;        /* gray-600 正文 */
  --text-muted: #9CA3AF;       /* gray-400 辅助 */
  --text-placeholder: #D1D5DB; /* gray-300 占位 */

  /* 边框 */
  --border-main: #E5E7EB;      /* gray-200 */
  --border-light: #F3F4F6;     /* gray-100 */

  /* 状态色 */
  --status-success: #16A34A;   /* green-600 */
  --status-warning: #EAB308;   /* yellow-500 */
  --status-danger: #DC2626;    /* red-600 */
  --status-info: #2563EB;      /* blue-600 */

  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;

  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-full: 999rpx;

  /* 全局字体 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  color: var(--text-body);
  background-color: var(--bg-page);
  line-height: 1.6;
}

/* ========== 容器 ========== */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: var(--bg-page);
  padding: 0 var(--spacing-lg);
}

/* ========== 卡片 ========== */
.card {
  background: var(--bg-card);
  border: 1rpx solid var(--border-main);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* ========== 按钮 ========== */
.btn-primary {
  background: var(--brand-primary);
  color: #FFFFFF;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  font-size: 30rpx;
  padding: 24rpx 0;
  text-align: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-primary:active {
  background: var(--brand-hover);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(37, 99, 235, 0.15);
}

.btn-secondary {
  background: var(--bg-card);
  color: var(--text-heading);
  border: 1rpx solid var(--border-main);
  border-radius: var(--radius-md);
  font-weight: 500;
  font-size: 28rpx;
  padding: 24rpx 0;
  text-align: center;
  transition: all 0.2s ease;
}

.btn-secondary:active {
  background: var(--bg-section);
}

/* ========== 状态徽章 ========== */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-full);
  font-size: 22rpx;
  font-weight: 500;
}

.badge-success {
  background: #DCFCE7;
  color: var(--status-success);
}

.badge-warning {
  background: #FEF9C3;
  color: #A16207;
}

.badge-danger {
  background: #FEE2E2;
  color: var(--status-danger);
}

.badge-info {
  background: var(--brand-light);
  color: var(--brand-primary);
}

/* ========== 分隔线 ========== */
.divider {
  height: 1rpx;
  background: var(--border-main);
  margin: var(--spacing-md) 0;
}

/* ========== 搜索栏 ========== */
.search-bar {
  padding: var(--spacing-sm) 0;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: var(--bg-card);
  border: 1rpx solid var(--border-main);
  border-radius: var(--radius-lg);
  padding: 16rpx 24rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-heading);
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: var(--text-muted);
  font-size: 28rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: var(--text-muted);
  font-size: 26rpx;
}

.load-more, .loading-more, .no-more {
  text-align: center;
  padding: 32rpx 0;
  color: var(--text-muted);
  font-size: 24rpx;
}

/* ========== FAB 浮动按钮 ========== */
.fab-add {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--brand-primary);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 300;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.3);
  z-index: 100;
  transition: all 0.2s ease;
}

.fab-add:active, .fab-active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

/* ========== 页面区块标题 ========== */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-heading);
  margin-bottom: var(--spacing-md);
}

/* ========== 动画 ========== */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(16rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  animation: fadeIn 0.4s ease-out forwards;
}

.animate-slide-up {
  opacity: 0;
  animation: fadeIn 0.4s ease-out forwards;
}

/* ========== 通用工具 ========== */
.text-primary { color: var(--brand-primary); }
.text-heading { color: var(--text-heading); }
.text-muted { color: var(--text-muted); }
.bg-brand-light { background: var(--brand-light); }

.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }

/* ========== 安全区域 ========== */
.safe-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-top {
  padding-top: env(safe-area-inset-top);
}
