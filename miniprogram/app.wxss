/**
 * L2C 小程序全局样式 - Art Deco / 盖茨比奢华版
 */

/* Art Deco Theme Definition */
page {
  /* 品牌色 - 盖茨比金 (Gatsby Gold) */
  --gold-primary: #D4AF37; /* 经典复古金 */
  --gold-light: #F2D091;   /* 香槟金 - 高光 */
  --gold-dark: #AA8A28;    /* 暗金 - 阴影 */
  
  /* 辅助色 */
  --obsidian-black: #050505; /* 曜石黑 */
  --charcoal-black: #121212; /* 炭黑 - 卡片背景 */
  --rich-black: #0F0F0F;     /* 丰富黑 */
  
  /* 状态色 - 降低饱和度以匹配复古感 */
  --status-success: #059669; /* 祖母绿 */
  --status-warning: #D97706; /* 琥珀色 */
  --status-danger: #9F1239;  /* 宝石红 */
  
  /* 文字 */
  --text-main: #E2E8F0;      /* 铂金灰 */
  --text-muted: #94A3B8;     /* 哑光灰 */
  --text-gold: #F2D091;      /* 金色文字 */
  
  /* 背景 */
  --bg-page: var(--obsidian-black);
  --bg-card: rgba(18, 18, 18, 0.95);
  
  /* 装饰性渐变 */
  --deco-gradient: linear-gradient(135deg, #D4AF37 0%, #F2D091 50%, #AA8A28 100%);
  --deco-border: 1rpx solid rgba(212, 175, 55, 0.3);
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  color: var(--text-main);
  background-color: var(--bg-page);
  line-height: 1.6;
  letter-spacing: 1rpx; /* 增加字间距，提升高级感 */
}

/* 容器 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: var(--bg-page);
  /* 装饰纹理建议在各页面单独添加，避免全局污染 */
}

/* Art Deco Card (装饰艺术卡片) */
.card, .deco-card {
  background: var(--bg-card);
  border: 1rpx solid rgba(212, 175, 55, 0.3); /* 金色细边框 */
  border-radius: 8rpx; /* 较小的圆角，更硬朗 */
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.8);
  position: relative;
  /* 双线边框效果 - 通过 inset shadow 模拟 */
  box-shadow: 
    0 10rpx 30rpx rgba(0, 0, 0, 0.8),
    inset 0 0 0 2rpx rgba(212, 175, 55, 0.1); 
}

/* 装饰性角标 (Corner Ornaments) */
.deco-card::before, .deco-card::after {
    content: '';
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    border: 2rpx solid var(--gold-primary);
    transition: all 0.3s ease;
}

.deco-card::before {
    top: -2rpx; left: -2rpx;
    border-right: none;
    border-bottom: none;
}

.deco-card::after {
    bottom: -2rpx; right: -2rpx;
    border-left: none;
    border-top: none;
}

/* 按钮 - 奢华质感 */
.btn-primary, .btn-gold {
  background: linear-gradient(180deg, #F2D091 0%, #D4AF37 100%);
  color: #0F0F0F;
  border: none;
  border-radius: 4rpx; /* 微圆角 */
  font-weight: bold;
  letter-spacing: 2rpx;
  padding: 24rpx 0;
  box-shadow: 
    0 4rpx 12rpx rgba(212, 175, 55, 0.3),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
  text-transform: uppercase;
  transition: all 0.2s;
  position: relative;
  overflow: hidden;
}

.btn-primary::after {
    /* 金属光泽扫光动画 */
    content: '';
    position: absolute;
    top: 0; left: -100%;
    width: 100%; height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    animation: none;
}

.btn-primary:active {
  opacity: 0.95;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(212, 175, 55, 0.2);
}

.btn-secondary {
  background: transparent;
  color: var(--gold-primary);
  border: 1rpx solid var(--gold-primary);
  border-radius: 4rpx;
}

/* 状态徽章 */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-weight: 600;
  border: 1rpx solid currentColor;
}

/* 通用工具 */
.text-gold { color: var(--gold-primary); }
.text-light { color: var(--gold-light); }
.bg-gold { background: var(--gold-primary); }

.divider-gold {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, var(--gold-primary), transparent);
  margin: 40rpx 0;
  opacity: 0.5;
}

/* Art Deco Pattern Helper */
.bg-pattern {
    background-image: 
      linear-gradient(rgba(212, 175, 55, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212, 175, 55, 0.05) 1px, transparent 1px);
    background-size: 40rpx 40rpx;
}

.mt-32 { margin-top: 32rpx; }
.mb-32 { margin-bottom: 32rpx; }
