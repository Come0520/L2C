/**
 * L2C 小程序全局样式 - UI/UX Pro Max Edition
 */

page {
  /* 品牌色系 - 保持鲜艳 */
  --primary-color: #2563eb;
  --primary-gradient-start: #3b82f6;
  --primary-gradient-end: #1d4ed8;
  
  /* 功能色 */
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --danger-color: #ef4444;
  
  /* 文字颜色 - 浅色模式适配 - 增强对比度 */
  --text-primary: #0f172a; /* Slate 900 - 纯黑/深蓝黑 */
  --text-secondary: #334155; /* Slate 700 - 深灰 */
  --text-muted: #64748b; /* Slate 500 - 中灰 */
  --text-light: #f8fafc; /* Slate 50 */
  --text-on-primary: #ffffff;
  
  /* 背景色 - 浅色极光基底 */
  --bg-page: #f8fafc; /* Slate 50 */
  --bg-card: rgba(255, 255, 255, 0.65); /* 稍微降低不透明度 */
  --bg-input: rgba(255, 255, 255, 0.5);
  
  /* 边框和阴影 */
  --border-color: rgba(255, 255, 255, 0.8);
  --shadow-sm: 0 1px 2px 0 rgba(148, 163, 184, 0.1);
  --shadow-md: 0 4px 6px -1px rgba(148, 163, 184, 0.1), 0 2px 4px -1px rgba(148, 163, 184, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(148, 163, 184, 0.1), 0 4px 6px -2px rgba(148, 163, 184, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(148, 163, 184, 0.1), 0 10px 10px -5px rgba(148, 163, 184, 0.04);
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--text-primary);
  background-color: var(--bg-page);
  line-height: 1.5;
}

/* 容器 */
.container {
  min-height: 100vh;
  box-sizing: border-box;
  background-color: var(--bg-page);
}

/* 卡片 - White Glassmorphism Pro */
.card {
  background: var(--bg-card);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow-lg);
  position: relative;
  overflow: hidden;
}

/* ... */

/* 按钮 - 柔化处理 */
.btn-primary {
  /* 使用更柔和的 Indigo -> Blue 渐变，降低饱和度冲击 */
  background: linear-gradient(135deg, #6366f1, #3b82f6); 
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.25); /* 阴影颜色也变淡 */
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(99, 102, 241, 0.2);
}

.btn-secondary {
  background: #f3f4f6;
  color: var(--text-primary);
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  line-height: 96rpx; /* account for border */
}

.btn-disabled {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

/* 状态徽章 */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 1.5;
}

/* 通用工具 */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 40rpx 0;
  opacity: 0.6;
}

.mt-32 { margin-top: 32rpx; }
.mb-32 { margin-bottom: 32rpx; }
