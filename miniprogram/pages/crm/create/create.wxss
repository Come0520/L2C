/* pages/crm/create/create.wxss */
.container {
    min-height: 100vh;
    background-color: var(--bg-page);
    padding-bottom: 160rpx;
}

.form-section {
    padding: 24rpx 32rpx;
}

.section-title {
    font-size: 26rpx;
    color: var(--text-muted);
    margin-bottom: 16rpx;
    margin-top: 16rpx;
    padding-left: 8rpx;
}

.form-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 0 32rpx;
    box-shadow: var(--shadow-sm);
    margin-bottom: 32rpx;
}

.form-item {
    display: flex;
    align-items: center;
    padding: 32rpx 0;
    border-bottom: 1rpx solid var(--border-light);
}

.form-item:last-child {
    border-bottom: none;
}

.textarea-item {
    flex-direction: column;
    align-items: flex-start;
}

.label {
    font-size: 28rpx;
    color: var(--text-heading);
    width: 140rpx;
    flex-shrink: 0;
}

.label.required::before {
    content: '*';
    color: var(--status-danger);
    margin-right: 8rpx;
}

.input {
    flex: 1;
    font-size: 28rpx;
    color: var(--text-body);
}

.input::placeholder {
    color: var(--text-placeholder);
}

.input.error {
    color: var(--status-danger);
}

.input.error::placeholder {
    color: rgba(239, 68, 68, 0.5); /* red-500 with opacity */
}

.textarea {
    width: 100%;
    font-size: 28rpx;
    color: var(--text-body);
    min-height: 120rpx;
    margin-top: 16rpx;
    line-height: 1.6;
}

.textarea::placeholder {
    color: var(--text-placeholder);
}

.picker-value {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: var(--text-body);
}

.picker-value.placeholder {
    color: var(--text-placeholder);
}

.arrow {
    color: var(--text-placeholder);
    font-size: 32rpx;
    margin-left: 16rpx;
}

/* 提交区域 */
.submit-area {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
    background: var(--bg-card);
    border-top: 1rpx solid var(--border-light);
    z-index: 100;
}

.submit-btn {
    width: 100%;
    height: 88rpx;
    background: var(--brand-primary);
    color: #FFFFFF;
    font-size: 32rpx;
    font-weight: 500;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.submit-btn.disabled {
    opacity: 0.6;
}

.submit-btn::after {
    border: none;
}

.submit-btn:active {
    background: var(--brand-hover);
}

/* 多级来源选择器弹窗 */
.source-picker-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.source-picker-mask.show {
    opacity: 1;
    visibility: visible;
}

.source-picker-panel {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--bg-card);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    transform: translateY(100%);
    transition: transform 0.3s ease;
}

.source-picker-mask.show .source-picker-panel {
    transform: translateY(0);
}

.picker-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx;
    border-bottom: 1rpx solid var(--border-light);
}

.picker-cancel {
    color: var(--text-muted);
    font-size: 28rpx;
}

.picker-title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-heading);
}

.picker-confirm {
    color: var(--brand-primary);
    font-size: 28rpx;
    font-weight: 500;
}

.picker-body {
    display: flex;
    height: 600rpx;
}

.picker-column {
    flex: 1;
    height: 100%;
    border-right: 1rpx solid var(--border-light);
}

.picker-column:last-child {
    border-right: none;
}

.picker-item {
    padding: 28rpx 24rpx;
    font-size: 28rpx;
    color: var(--text-body);
    border-bottom: 1rpx solid var(--border-light);
    text-align: center;
}

.picker-item.active {
    background: var(--brand-light);
    color: var(--brand-primary);
    font-weight: 500;
}

.picker-empty {
    padding: 48rpx 24rpx;
    text-align: center;
    color: var(--text-placeholder);
    font-size: 26rpx;
}
