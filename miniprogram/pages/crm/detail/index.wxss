/* pages/crm/detail/index.wxss */
.container {
    min-height: 100vh;
    background-color: #f8fafc;
    padding-bottom: 120rpx;
}

.header-card {
    background: #fff;
    padding: 32rpx;
    margin-bottom: 20rpx;
}

.info-row {
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
}

.avatar-placeholder {
    width: 100rpx;
    height: 100rpx;
    background: #e2e8f0;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    font-weight: 600;
    color: #64748b;
    margin-right: 24rpx;
}

.basic-info {
    flex: 1;
}

.name-row {
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
}

.name {
    font-size: 36rpx;
    font-weight: 600;
    color: #1e293b;
    margin-right: 16rpx;
}

.level-tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    background: #fff7ed;
    color: #f97316;
    border: 1rpx solid #ffedd5;
    border-radius: 8rpx;
}

.meta-row {
    font-size: 26rpx;
    color: #64748b;
}

.contact-actions {
    display: flex;
    border-top: 1rpx solid #f1f5f9;
    padding-top: 24rpx;
}

.action-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #475569;
}

.action-item .icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 8rpx;
}

.section-title {
    padding: 24rpx 32rpx;
    font-size: 28rpx;
    font-weight: 600;
    color: #334155;
}

.timeline {
    background: #fff;
    padding: 32rpx;
    min-height: 200rpx;
}

.timeline-item {
    display: flex;
    padding-bottom: 32rpx;
}

.timeline-left {
    width: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 24rpx;
}

.dot {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #e2e8f0;
    margin-top: 10rpx;
    flex-shrink: 0;
}

.dot.VISIT { background: #3b82f6; }
.dot.CALL { background: #10b981; }
.dot.WECHAT { background: #22c55e; }

.line {
    flex: 1;
    width: 2rpx;
    background: #e2e8f0;
    margin-top: 8rpx;
}

.timeline-content {
    flex: 1;
}

.activity-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

.type-badge {
    font-size: 22rpx;
    padding: 2rpx 10rpx;
    border-radius: 6rpx;
    background: #f1f5f9;
    color: #64748b;
}

.activity-time {
    font-size: 22rpx;
    color: #94a3b8;
}

.activity-body {
    font-size: 28rpx;
    color: #334155;
    line-height: 1.5;
    margin-bottom: 8rpx;
}

.activity-footer {
    font-size: 22rpx;
    color: #94a3b8;
}

.empty-state {
    text-align: center;
    padding: 40rpx;
    color: #94a3b8;
    font-size: 26rpx;
}

/* Footer */
.footer-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
    box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
    display: flex;
    gap: 24rpx;
}

.footer-btn {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 30rpx;
    font-weight: 500;
    margin: 0;
}

.footer-btn::after { border: none; }

.footer-btn.secondary {
    background: #f1f5f9;
    color: #334155;
}

.footer-btn.primary {
    background: #1e293b;
    color: #fff;
}
