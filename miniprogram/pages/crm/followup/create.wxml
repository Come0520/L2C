<!--pages/crm/followup/create.wxml-->
<view class="container">
  <view class="form-group">
    <view class="label">跟进方式</view>
    <view class="type-selector">
        <view 
            wx:for="{{typeOptions}}" 
            wx:key="value"
            class="type-item {{form.type === item.value ? 'active' : ''}}"
            bindtap="onTypeSelect"
            data-value="{{item.value}}"
        >
            {{item.label}}
        </view>
    </view>
  </view>

  <view class="form-group">
    <view class="label">跟进内容</view>
    <textarea 
        class="input-area" 
        placeholder="记录一下跟进情况..." 
        bindinput="onInputContent"
        value="{{form.description}}"
        maxlength="500"
    ></textarea>
  </view>

