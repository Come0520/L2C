/* pages/crm/followup/create.wxss */
.container {
    padding: 32rpx;
    background: #fff;
    min-height: 100vh;
}

.form-group {
    margin-bottom: 48rpx;
}

.label {
    font-size: 28rpx;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 24rpx;
}

.type-selector {
    display: flex;
    gap: 24rpx;
}

.type-item {
    padding: 12rpx 32rpx;
    background: #f1f5f9;
    border-radius: 32rpx;
    font-size: 26rpx;
    color: #64748b;
    border: 1rpx solid transparent;
}

.type-item.active {
    background: #eff6ff;
    color: #3b82f6;
    border-color: #3b82f6;
    font-weight: 500;
}

.input-area {
    width: 100%;
    height: 300rpx;
    background: #f8fafc;
    border-radius: 12rpx;
    padding: 24rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.footer {
    margin-top: 64rpx;
}

.submit-btn {
    background: #1e293b;
    color: #fff;
    font-weight: 500;
    border-radius: 12rpx;
    height: 96rpx;
    line-height: 96rpx;
}
