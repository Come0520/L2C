/* 客户列表 - 简洁专业版 */
.container {
  background-color: var(--bg-page);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 搜索栏使用全局样式 search-bar 和 search-input-wrap */
.search-bar {
  padding: 24rpx 32rpx;
  background: var(--bg-card);
  border-bottom: 1rpx solid var(--border-light);
}

.crm-list {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

/* 客户卡片使用全局 card 类作为基础，此处补充增量样式 */
.crm-card {
  padding: 32rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  border: 1rpx solid var(--border-light);
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid var(--border-light);
  padding-bottom: 24rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-heading);
}

.tag {
  font-size: 22rpx;
  color: var(--brand-primary);
  background: var(--brand-light);
  padding: 4rpx 16rpx;
  border-radius: var(--radius-full);
}

.call-btn {
  width: 64rpx;
  height: 64rpx;
  background: var(--brand-light);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.2s ease;
}

.call-btn:active {
  background: var(--brand-100);
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-row {
  display: flex;
  font-size: 26rpx;
  align-items: flex-start;
}

.label {
  color: var(--text-muted);
  width: 120rpx;
  flex-shrink: 0;
}

.value {
  color: var(--text-body);
  flex: 1;
}

.value.highlight {
  color: var(--brand-primary);
  font-weight: 500;
}

