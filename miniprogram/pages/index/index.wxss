/* 首页 - 简洁专业版 */
.index-page {
  padding-top: 40rpx;
  padding-bottom: 120rpx;
  min-height: 100vh;
}

/* 品牌头部 */
.brand-header {
  margin-bottom: 48rpx;
}

.logo-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.logo {
  width: 60rpx;
  height: 60rpx;
}

.brand-text {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.brand-name {
  font-size: 40rpx;
  font-weight: 800;
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-indigo));
  -webkit-background-clip: text;
  color: transparent;
}

.brand-tag {
  font-size: 20rpx;
  font-weight: 700;
  color: var(--brand-primary);
  background: var(--brand-light);
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

/* 登录卡片 */
.login-section {
  padding-top: 60rpx;
}

.login-card {
  padding: 48rpx 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-heading);
  margin-bottom: 12rpx;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-muted);
}

.btn-wechat {
  width: 100%;
  background: #07C160;
  color: #FFFFFF;
  border: none;
  border-radius: var(--radius-md);
  font-weight: 600;
  font-size: 30rpx;
  padding: 28rpx 0;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}

.btn-wechat::after {
  border: none;
}

.btn-wechat:active {
  background: #06AD56;
}

.login-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 32rpx;
}

.footer-text {
  color: var(--text-muted);
  font-size: 26rpx;
}

.footer-link {
  color: var(--brand-primary);
  font-size: 26rpx;
  font-weight: 500;
}

/* 仪表盘 */
.user-summary {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.user-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrap {
  flex-shrink: 0;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  border: 2rpx solid var(--border-main);
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-heading);
  margin-bottom: 6rpx;
}

.tenant-badge {
  display: inline-block;
  font-size: 22rpx;
  color: var(--text-muted);
  background: var(--bg-section);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.tenant-badge.active {
  color: var(--status-success);
  background: #DCFCE7;
}

/* 提醒样式 */
.alert {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  border-radius: var(--radius-sm);
  font-size: 24rpx;
}

.alert-warning {
  background: #FEF9C3;
  color: #A16207;
}

.alert-danger {
  background: #FEE2E2;
  color: var(--status-danger);
}

/* 功能菜单网格 */
.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
}

.card-hover {
  background: var(--bg-section) !important;
}

.menu-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon-wrap.blue { background: #EFF6FF; }
.menu-icon-wrap.green { background: #F0FDF4; }
.menu-icon-wrap.purple { background: #FAF5FF; }
.menu-icon-wrap.gray { background: #F3F4F6; }

.menu-icon-img {
  width: 36rpx;
  height: 36rpx;
}

.menu-name {
  font-size: 26rpx;
  color: var(--text-heading);
  font-weight: 500;
}

/* 版权 */
.copyright {
  text-align: center;
  margin-top: 80rpx;
  font-size: 22rpx;
  color: var(--text-placeholder);
}
