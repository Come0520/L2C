  border: 1rpx solid rgba(226, 232, 240, 0.8);
}

.menu-label {
  font-size: 28rpx;
  color: #334155; /* Dark text */
  font-weight: 500;
}

.copyright {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  font-size: 22rpx;
