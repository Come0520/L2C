/* pages/index/index.wxss */

/* 容器与背景 */
.container {
  min-height: 100vh;
  position: relative;
  background-color: #f8fafc; /* Slate 50 */
  overflow: hidden;
  color: #0f172a; /* Slate 900 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 液态流体背景 */
.liquid-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.blob {
  position: absolute;
  filter: blur(80px);
  opacity: 0.6; /* Higher opacity for light mode */
  border-radius: 50%;
  animation: float 10s infinite ease-in-out;
  mix-blend-mode: multiply; /* Better blending for light mode */
}

.blob-1 {
  width: 500rpx;
  height: 500rpx;
  background: #e0e7ff; /* Indigo 100 */
  top: -10%;
  left: -20%;
  animation-delay: 0s;
}

.blob-2 {
  width: 400rpx;
  height: 400rpx;
  background: #fce7f3; /* Pink 100 */
  bottom: 10%;
  right: -10%;
  animation-delay: -2s;
}

.blob-3 {
  width: 300rpx;
  height: 300rpx;
  background: #dbeafe; /* Blue 100 */
  top: 40%;
  left: 30%;
  animation-delay: -4s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(30px, -50px) scale(1.1); }
  66% { transform: translate(-20px, 20px) scale(0.9); }
}

/* 噪点纹理 */
.noise-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.05'/%3E%3C/svg%3E");
  z-index: 1;
  pointer-events: none;
}

/* 内容布局 */
.content-wrapper {
  position: relative;
  z-index: 10;
  padding: 0 40rpx;
  padding-top: 140rpx;
  display: flex;
  flex-direction: column;
}

/* Common Animations */
.animate-fade-in-down {
  animation: fadeInDown 0.8s ease-out forwards;
}

.animate-slide-up {
  animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  opacity: 0;
  transform: translateY(40rpx);
  animation-delay: 0.2s;
}

@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
  to { opacity: 1; transform: translateY(0); }
}

/* Header */
.header {
  margin-bottom: 80rpx;
}

.logo-box {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx;
  box-sizing: border-box;
}

.app-name {
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
}

.app-tag {
  font-size: 20rpx;
  background: rgba(255,255,255,0.2);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 12rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
}

/* Slogan 调整 - 增强可读性 */
.slogan-main {
  display: block;
  font-size: 60rpx;
  font-weight: 300;
  line-height: 1.2;
  color: #1e293b; /* Slate 800 */
}

.slogan-sub {
  display: block;
  font-size: 60rpx;
  font-weight: 800;
  /* 改为深色渐变，避免在浅色背景上看不清 */
  background: linear-gradient(135deg, #4f46e5, #2563eb); 
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1.2;
}

/* ... */

.welcome-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  color: #0f172a; /* 确保深色 */
}

.welcome-desc {
  font-size: 28rpx;
  color: #64748b; /* Slate 500 - 确保对比度 */
  margin-bottom: 48rpx;
}

.login-btn {
  position: relative;
  /* 柔和渐变 */
  background: linear-gradient(135deg, #6366f1, #3b82f6); 
  border-radius: 24rpx; /* 稍微减小圆角，更现代 */
  height: 104rpx;
  padding: 0;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
  box-shadow: 0 10rpx 25rpx -5rpx rgba(79, 70, 229, 0.3); /* 阴影柔和化 */
}

