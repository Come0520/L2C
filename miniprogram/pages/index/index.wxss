/* ... */

.tenant-tag {
  display: inline-block;
  font-size: 22rpx;
  background: rgba(15, 23, 42, 0.05); /* Dark tint */
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: #475569;
  border: 1rpx solid rgba(15, 23, 42, 0.05);
