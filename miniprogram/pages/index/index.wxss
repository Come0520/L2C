/* pages/index/index.wxss */

.header {
  text-align: center;
  padding: 80rpx 0 60rpx;
}

.logo-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.app-desc {
  font-size: 28rpx;
  color: var(--text-muted);
  margin-top: 12rpx;
}

/* 登录区域 */
.login-section {
  padding: 0 16rpx;
}

.btn-icon {
  margin-right: 16rpx;
}

.register-tip {
  text-align: center;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.link {
  color: var(--primary-color);
  font-weight: 500;
  margin-left: 8rpx;
}

/* 用户区域 */
.user-section {
  padding: 0 16rpx;
}

.user-card {
  padding: 40rpx 32rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  margin-right: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.tenant-name {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.status-badge {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.badge-pending {
  background: #fff7ed;
  color: #ea580c;
}

.badge-success {
  background: #f0fdf4;
  color: #16a34a;
}

.badge-error {
  background: #fef2f2;
  color: #dc2626;
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  flex-wrap: wrap;
  background: var(--bg-card);
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  margin-bottom: 24rpx;
}

.action-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 通知卡片 */
.notification-card {
  display: flex;
  align-items: flex-start;
  background: #fffbeb;
  border-left: 6rpx solid #f59e0b;
}

.notification-card.error {
  background: #fef2f2;
  border-left-color: #ef4444;
}

.notification-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.notification-content {
  flex: 1;
}

.notification-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.notification-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 底部 */
.footer {
  text-align: center;
  padding: 60rpx 0 40rpx;
  color: var(--text-muted);
  font-size: 24rpx;
}
