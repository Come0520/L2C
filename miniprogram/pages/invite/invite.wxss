/* pages/invite/invite.wxss */

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  color: var(--text-muted);
  font-size: 24rpx;
}

/* 二维码区域 */
.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.qrcode {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  border: 2rpx solid var(--border-color);
}

.qrcode-tip {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 20rpx;
}

.invite-link-box {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin-top: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.invite-link {
  flex: 1;
  font-size: 24rpx;
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.copy-btn {
  margin-left: 16rpx;
  font-size: 24rpx;
}

.expire-tip {
  font-size: 24rpx;
  color: var(--warning-color);
  margin-top: 16rpx;
}

/* 邀请列表 */
.invite-list {
  margin-top: 20rpx;
}

.invite-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.invite-item:last-child {
  border-bottom: none;
}

.invite-info {
  flex: 1;
}

.invite-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.invite-meta {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.invite-role {
  font-size: 24rpx;
  color: var(--text-secondary);
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.invite-time {
  font-size: 24rpx;
  color: var(--text-muted);
}

.invite-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.badge-success {
  background: #dcfce7;
  color: #16a34a;
}

.badge-pending {
  background: #fef3c7;
  color: #d97706;
}
