/* pages/invite/invite.wxss */
.container {
  min-height: 100vh;
  position: relative;
  background-color: var(--bg-page);
  overflow: hidden;
  color: var(--text-body);
}

.content-wrapper {
  height: 100vh;
  box-sizing: border-box;
  padding: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 统一白底卡片 */
.card, .invite-card, .list-card, .empty-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: 32rpx;
  overflow: hidden;
  position: relative;
}

/* 头部 */
.invite-card { padding: 48rpx 40rpx; }

.header-icon-box {
  width: 88rpx;
  height: 88rpx;
  background: var(--bg-primary-light);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  color: var(--brand-primary);
  font-size: 40rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-heading);
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: var(--text-muted);
}

/* 表单 */
.form-group { margin-bottom: 32rpx; }
.mt-32 { margin-top: 32rpx; }

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-heading);
  margin-bottom: 16rpx;
  display: block;
}

.form-input, .picker-value {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  background: var(--bg-section);
  border: 2rpx solid transparent;
  border-radius: var(--radius-md);
  color: var(--text-body);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s;
}

.form-input:focus {
    border-color: var(--brand-primary);
    background: var(--bg-card);
    box-shadow: 0 0 0 4rpx var(--bg-primary-light);
}

.picker-wrapper { position: relative; }

.picker-arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-muted);
  font-size: 24rpx;
  pointer-events: none;
}

.picker-value.placeholder { color: var(--text-muted); }

/* 按钮 - 标准亮色主色调 */
.primary-btn {
  width: 100%;
  height: 96rpx;
  background: var(--brand-primary);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.3);
  margin-bottom: 40rpx;
  transition: opacity 0.3s;
}

.btn-hover { opacity: 0.9; transform: scale(0.98); }

/* 二维码区域 */
.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 32rpx;
  border-top: 1rpx dashed var(--border-light);
}

.qrcode-box {
  padding: 24rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  margin-bottom: 24rpx;
  border: 2rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.qrcode { width: 320rpx; height: 320rpx; display: block; }
.qrcode-tip { font-size: 26rpx; color: var(--text-muted); margin-bottom: 32rpx; }

.link-box {
  display: flex;
  align-items: center;
  background: var(--bg-section);
  border: 2rpx solid var(--border-light);
  border-radius: var(--radius-md);
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.link-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-body);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 16rpx;
}

.copy-tag {
  font-size: 24rpx;
  color: var(--brand-primary);
  font-weight: bold;
  padding: 8rpx 20rpx;
  background: var(--bg-primary-light);
  border-radius: 8rpx;
}

.expire-tip {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-muted);
  background: var(--bg-section);
  padding: 12rpx 24rpx;
  border-radius: 99rpx;
}

.expire-icon { margin-right: 8rpx; }

/* 列表头部 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.list-count {
  background: var(--bg-primary-light);
  color: var(--brand-primary);
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 99rpx;
  font-weight: bold;
}

.invite-list { padding: 0 32rpx 32rpx; }

.invite-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.invite-item:last-child { border-bottom: none; }

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  background: var(--bg-section);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--brand-primary);
  margin-right: 24rpx;
}

.invite-info { flex: 1; }

.invite-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-heading);
  margin-bottom: 8rpx;
}

.invite-role-tag {
  display: inline-block;
  font-size: 22rpx;
  color: var(--brand-primary);
  background: var(--bg-primary-light);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.invite-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.invite-time {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-bottom: 8rpx;
}

.invite-status {
  font-size: 24rpx;
  font-weight: 600;
}

.badge-success { color: var(--color-success); }
.badge-pending { color: var(--text-muted); }

/* 空状态 / 未激活态 */
.empty-card {
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon-box {
  width: 140rpx;
  height: 140rpx;
  background: var(--bg-section);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.empty-icon { font-size: 64rpx; }

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-heading);
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-muted);
  max-width: 80%;
  line-height: 1.5;
}

.outline-btn {
  width: 100%;
  height: 96rpx;
  background: transparent;
  border: 2rpx solid var(--brand-primary);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--brand-primary);
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 48rpx;
}

/* 动画 */
.animate-slide-up {
  opacity: 0;
  animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  transform: translateY(40rpx);
}

@keyframes slideUp {
  to { opacity: 1; transform: translateY(0); }
}

.animate-fade-in {
  opacity: 0;
  animation: fadeIn 0.4s ease-out forwards;
}

@keyframes fadeIn {
  to { opacity: 1; }
}
