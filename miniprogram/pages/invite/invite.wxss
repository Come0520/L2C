/* pages/invite/invite.wxss */

/* 容器 - 黑金主题 */
.container {
  min-height: 100vh;
  position: relative;
  background-color: #0f0f0f; /* 深邃黑 */
  background-image: radial-gradient(circle at 50% 0%, #2a2a2a 0%, #0f0f0f 70%);
  overflow: hidden;
  color: #e2e8f0;
}

/* 装饰性光效 */
.container::before {
  content: '';
  position: absolute;
  top: -200rpx;
  left: -200rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.15) 0%, transparent 70%);
  filter: blur(60rpx);
  pointer-events: none;
}

.content-wrapper {
  height: 100vh;
  box-sizing: border-box;
  padding: 32rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 黑金卡片 */
.gold-card, .invite-card, .list-card, .empty-card {
  background: #1a1a1a;
  border-radius: 32rpx;
  /* 黑色磨砂感 + 金色微光边框 */
  border: 2rpx solid rgba(212, 175, 55, 0.3); 
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.6),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.05); /* 内部高光 */
  margin-bottom: 40rpx;
  overflow: hidden;
  position: relative;
}

/* 头部 */
.invite-card { padding: 48rpx 40rpx; }

.header-icon-box {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #1e1e1e, #2d2d2d);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  color: #d4af37; /* 香槟金 */
  font-size: 48rpx;
  border: 2rpx solid rgba(212, 175, 55, 0.2);
  box-shadow: inset 0 2rpx 10rpx rgba(0,0,0,0.5);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  /* 金色渐变文字 */
  background: linear-gradient(to right, #d4af37, #fceabb); 
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 表单 */
.form-group {
  margin-bottom: 32rpx;
}
.mt-32 { margin-top: 32rpx; }

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #cbd5e1;
  margin-bottom: 16rpx;
  display: block;
}

.glass-input, .picker-value {
  width: 100%;
  height: 104rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  background: #262626;
  border: 2rpx solid #404040;
  border-radius: 20rpx;
  color: #f1f5f9;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.picker-wrapper {
  position: relative;
}

.picker-arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #d4af37;
  font-size: 24rpx;
  pointer-events: none;
}

.picker-value.placeholder {
  color: #64748b;
}

/* 按钮 - 黑金渐变 */
.primary-btn {
  width: 100%;
  height: 104rpx;
  /* 金色流光渐变 */
  background: linear-gradient(135deg, #d4af37 0%, #fceabb 50%, #d4af37 100%);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1a1a1a; /* 深色文字对比 */
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 8rpx 20rpx rgba(212, 175, 55, 0.3);
  margin-bottom: 40rpx;
  transition: opacity 0.3s;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.99);
}

/* 二维码区域 */
.qrcode-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 32rpx;
  border-top: 2rpx dashed rgba(212, 175, 55, 0.3);
}

.qrcode-box {
  padding: 20rpx;
  background: #ffffff; /* 二维码需白底 */
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 4rpx solid #d4af37;
}

.qrcode {
  width: 360rpx;
  height: 360rpx;
  display: block;
}

.qrcode-tip {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 32rpx;
}

.link-box {
  display: flex;
  align-items: center;
  background: #262626;
  border: 2rpx solid #404040;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.link-text {
  flex: 1;
  font-size: 26rpx;
  color: #e2e8f0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 16rpx;
}

.copy-tag {
  font-size: 24rpx;
  color: #1a1a1a;
  font-weight: 700;
  padding: 8rpx 20rpx;
  background: #d4af37;
  border-radius: 8rpx;
}

.expire-tip {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #d4af37;
  background: rgba(212, 175, 55, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 99rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

.expire-icon {
  margin-right: 8rpx;
}

/* 列表头部 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
}

.list-count {
  background: rgba(212, 175, 55, 0.2);
  color: #d4af37;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 99rpx;
  font-weight: 700;
}

.invite-list {
  padding: 0 32rpx 32rpx;
}

.invite-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
}

.invite-item:last-child {
  border-bottom: none;
}

.avatar-placeholder {
  width: 88rpx;
  height: 88rpx;
  background: #2d2d2d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #d4af37;
  margin-right: 24rpx;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

.invite-info {
  flex: 1;
}

.invite-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.invite-role-tag {
  display: inline-block;
  font-size: 22rpx;
  color: #1a1a1a;
  background: #d4af37;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.invite-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.invite-time {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.invite-status {
  font-size: 24rpx;
  font-weight: 600;
}

.badge-success { color: #d4af37; } /* 已加入显示金色 */
.badge-pending { color: #94a3b8; }

/* 空状态 */
.empty-card {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon-box {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  border: 2rpx dashed rgba(212, 175, 55, 0.3);
}

.empty-icon { font-size: 64rpx; }

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #e2e8f0;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
  max-width: 80%;
}

.outline-btn {
  width: 100%;
  height: 104rpx;
  background: transparent;
  border: 2rpx solid #d4af37;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d4af37;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 48rpx;
}

/* 动画 - 保持简单的淡入上浮 */
.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  opacity: 0;
  transform: translateY(40rpx);
}

@keyframes slideUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fadeIn 0.4s ease-out forwards;
  opacity: 0;
}

@keyframes fadeIn {
  to { opacity: 1; }
}
