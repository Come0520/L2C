<!--pages/landing/landing.wxml-->
<!-- 单屏紧凑落地页 - 用 SVG 图标替代 Emoji，采用 SaaS 信任蓝 + 橙色 CTA 配色方案 -->
<view class="landing-page">
  <!-- 背景装饰层 -->
  <view class="landing-bg">
    <view class="bg-orb orb-1"></view>
    <view class="bg-orb orb-2"></view>
    <view class="bg-orb orb-3"></view>
  </view>

  <!-- 顶部品牌栏 -->
  <view class="landing-nav">
    <view class="nav-brand">
      <view class="brand-dot"></view>
      <text class="brand-name">L2C</text>
    </view>
  </view>

  <!-- 主体内容区 -->
  <view class="landing-main">
    <!-- Hero 文案区 -->
    <view class="hero-area">
      <view class="hero-headline">
        <text class="hero-line1">窗帘生意</text>
        <text class="hero-line2">更简单</text>
      </view>
      <text class="hero-sub">从报价到安装，一部手机管好全流程</text>
    </view>

    <!-- 4 大功能亮点 - 2x2 网格 -->
    <view class="features-grid">
      <view class="feat-card">
        <view class="feat-icon-wrap blue">
          <image class="feat-icon-img" src="/assets/icons/flash-blue.svg" mode="aspectFit" />
        </view>
        <view class="feat-info">
          <text class="feat-title">极速开单</text>
          <text class="feat-desc">3分钟出报价</text>
        </view>
      </view>
      <view class="feat-card">
        <view class="feat-icon-wrap indigo">
          <image class="feat-icon-img" src="/assets/icons/chart-indigo.svg" mode="aspectFit" />
        </view>
        <view class="feat-info">
          <text class="feat-title">业绩看板</text>
          <text class="feat-desc">数据驱动决策</text>
        </view>
      </view>
      <view class="feat-card">
        <view class="feat-icon-wrap teal">
          <image class="feat-icon-img" src="/assets/icons/handshake-teal.svg" mode="aspectFit" />
        </view>
        <view class="feat-info">
          <text class="feat-title">客户跟进</text>
          <text class="feat-desc">线索零遗漏</text>
        </view>
      </view>
      <view class="feat-card">
        <view class="feat-icon-wrap amber">
          <image class="feat-icon-img" src="/assets/icons/tools-amber.svg" mode="aspectFit" />
        </view>
        <view class="feat-info">
          <text class="feat-title">工程协同</text>
          <text class="feat-desc">进度实时同步</text>
        </view>
      </view>
    </view>

    <!-- 行动号召区 -->
    <view class="cta-area">
      <button class="cta-button" open-type="getPhoneNumber" bindgetphonenumber="onGetPhoneNumber">
        <text class="cta-text">微信一键登录</text>
        <text class="cta-arrow">→</text>
      </button>
      <view class="alt-actions">
        <text class="alt-link" bindtap="handleCreateTenant">注册新企业</text>
        <view class="alt-dot"></view>
        <text class="alt-link" bindtap="handlePasswordLogin">密码登录</text>
      </view>
    </view>
  </view>

  <!-- 开发者快速登录 (上线前移除) -->
  <view class="dev-login" bindtap="devLogin">
    <text class="dev-login-text">🔧 开发模式免登录</text>
  </view>

  <!-- 底部版权 -->
  <view class="landing-bottom">
    <text class="bottom-text">© 2026 L2C.ASIA</text>
  </view>
</view>
