/* ============================================
   落地页 - UI/UX Pro Max 优化版
   设计体系：信任蓝 + 橙色 CTA 对比
   风格：Soft UI Evolution + 微交互
   ============================================ */

/* ---- 页面容器 ---- */
.landing-page {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(168deg, #F0F4FF 0%, #FFFFFF 45%, #FFF8F3 100%);
  display: flex;
  flex-direction: column;
}

/* ---- 背景装饰光晕 ---- */
.landing-bg {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  pointer-events: none;
  z-index: 0;
}

.bg-orb {
  position: absolute;
  border-radius: 50%;
}

.bg-orb.orb-1 {
  width: 500rpx; height: 500rpx;
  top: -160rpx; right: -120rpx;
  background: radial-gradient(circle, rgba(99, 102, 241, 0.10) 0%, transparent 70%);
}

.bg-orb.orb-2 {
  width: 400rpx; height: 400rpx;
  top: 50%; left: -100rpx;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.06) 0%, transparent 70%);
}

.bg-orb.orb-3 {
  width: 350rpx; height: 350rpx;
  bottom: -40rpx; right: 40rpx;
  background: radial-gradient(circle, rgba(249, 115, 22, 0.06) 0%, transparent 70%);
}

/* ---- 顶部导航 ---- */
.landing-nav {
  position: relative;
  z-index: 10;
  padding: 0 40rpx;
  padding-top: calc(env(safe-area-inset-top) + 16rpx);
  height: calc(env(safe-area-inset-top) + 72rpx);
  display: flex;
  align-items: flex-end;
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.brand-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #2563EB, #6366F1);
  box-shadow: 0 0 8rpx rgba(37, 99, 235, 0.4);
}

.brand-name {
  font-size: 38rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #2563EB, #6366F1);
  -webkit-background-clip: text;
  color: transparent;
  letter-spacing: 3rpx;
}

/* ---- 主体内容 ---- */
.landing-main {
  position: relative;
  z-index: 10;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 44rpx;
  gap: 44rpx;
}

/* ---- Hero 文案 ---- */
.hero-area {
  text-align: center;
}

.hero-headline {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 16rpx;
}

.hero-line1 {
  font-size: 58rpx;
  font-weight: 800;
  color: #1E293B;
  line-height: 1.25;
  letter-spacing: -1rpx;
}

.hero-line2 {
  font-size: 58rpx;
  font-weight: 800;
  line-height: 1.25;
  letter-spacing: -1rpx;
  background: linear-gradient(135deg, #2563EB 20%, #7C3AED 80%);
  -webkit-background-clip: text;
  color: transparent;
}

.hero-sub {
  display: block;
  font-size: 27rpx;
  color: #64748B;
  letter-spacing: 1rpx;
  margin-top: 4rpx;
}

/* ---- 功能亮点 2x2 网格 ---- */
.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18rpx;
}

.feat-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 22rpx 24rpx;
  background: rgba(255, 255, 255, 0.80);
  border-radius: 18rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.50);
  box-shadow:
    0 1rpx 3rpx rgba(0, 0, 0, 0.02),
    0 4rpx 16rpx rgba(0, 0, 0, 0.03);
  backdrop-filter: blur(12px);
  transition: all 200ms ease-out;
}

/* 图标容器 */
.feat-icon-wrap {
  width: 52rpx;
  height: 52rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.feat-icon-wrap.blue    { background: #EFF6FF; }
.feat-icon-wrap.indigo  { background: #EEF2FF; }
.feat-icon-wrap.teal    { background: #F0FDFA; }
.feat-icon-wrap.amber   { background: #FFFBEB; }

/* SVG 图标图片 */
.feat-icon-img {
  width: 28rpx;
  height: 28rpx;
}

/* 功能文字 */
.feat-info {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  min-width: 0;
}

.feat-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #1E293B;
  line-height: 1.3;
}

.feat-desc {
  font-size: 20rpx;
  color: #94A3B8;
  line-height: 1.3;
}

/* ---- CTA 行动区 ---- */
.cta-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

/* 主 CTA 按钮 - 橙色对比色 */
.cta-button {
  width: 100% !important;
  height: 92rpx !important;
  line-height: 92rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 12rpx !important;
  font-size: 31rpx !important;
  font-weight: 700 !important;
  border-radius: 46rpx !important;
  background: linear-gradient(135deg, #F97316 0%, #EA580C 100%) !important;
  color: #FFFFFF !important;
  border: none !important;
  box-shadow:
    0 6rpx 24rpx rgba(249, 115, 22, 0.30),
    0 2rpx 6rpx rgba(249, 115, 22, 0.15) !important;
  letter-spacing: 2rpx;
  padding: 0 !important;
  transition: all 200ms ease-out;
}

.cta-button::after {
  border: none;
}

.cta-text {
  font-size: 31rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.cta-arrow {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: transform 200ms ease-out;
}

/* 辅助操作链接 */
.alt-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.alt-link {
  font-size: 25rpx;
  color: #6366F1;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.alt-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #CBD5E1;
}

/* ---- 开发者快速登录 (上线前移除) ---- */
.dev-login {
  position: relative;
  z-index: 10;
  text-align: center;
  padding: 12rpx 0;
}

.dev-login-text {
  font-size: 22rpx;
  color: #94A3B8;
  background: rgba(241, 245, 249, 0.6);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx dashed #CBD5E1;
}

/* ---- 底部版权 ---- */
.landing-bottom {
  position: relative;
  z-index: 10;
  text-align: center;
  padding: 16rpx 0;
  padding-bottom: calc(env(safe-area-inset-bottom) + 16rpx);
}

.bottom-text {
  font-size: 20rpx;
  color: #94A3B8;
  letter-spacing: 1rpx;
}

/* ---- 动画 (微信小程序兼容) ---- */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hero-area {
  animation: fadeInUp 600ms ease-out;
}

.features-grid {
  animation: fadeInUp 600ms ease-out 150ms both;
}

.cta-area {
  animation: fadeInUp 600ms ease-out 300ms both;
}
