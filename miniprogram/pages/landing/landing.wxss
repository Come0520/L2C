/* 落地页 - 与 Web 统一的蓝紫渐变风格 */
.landing-page {
  padding: 0;
  background: #FFFFFF;
  min-height: 100vh;
}

/* 顶部导航 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  z-index: 100;
  border-bottom: 1rpx solid var(--border-light);
  padding-top: env(safe-area-inset-top);
}

.brand-text {
  font-size: 36rpx;
  font-weight: 800;
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-indigo));
  -webkit-background-clip: text;
  color: transparent;
}

/* 第 1 幕：Hero 区块 */
.hero-section {
  position: relative;
  padding-top: calc(120rpx + env(safe-area-inset-top));
  padding-bottom: 120rpx;
  overflow: hidden;
  background: var(--bg-page);
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  pointer-events: none;
}

.circle-blue {
  position: absolute;
  top: -200rpx;
  right: -200rpx;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background: rgba(219, 234, 254, 0.5); /* blue-100/50 */
  filter: blur(80px);
}

.circle-indigo {
  position: absolute;
  bottom: -150rpx;
  left: -150rpx;
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  background: rgba(224, 231, 255, 0.4); /* indigo-100/40 */
  filter: blur(80px);
}

.hero-swiper {
  height: 500rpx;
  z-index: 10;
  position: relative;
}

.slide-content {
  padding: 0 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
}

.slide-title {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--text-heading);
  line-height: 1.2;
  margin-bottom: 24rpx;
  letter-spacing: -1rpx;
}

.slide-subtitle {
  font-size: 28rpx;
  color: var(--text-body);
  line-height: 1.6;
  margin-bottom: 48rpx;
  padding: 0 20rpx;
}

.cta-btn {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.arrow {
  margin-left: 8rpx;
}

.learn-more {
  background: transparent;
  border-color: var(--border-main);
}

.custom-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  z-index: 10;
  margin-top: 40rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: #D1D5DB; /* gray-300 */
  transition: all 0.3s ease;
}

.dot.active {
  width: 32rpx;
  background: var(--brand-primary);
}

/* 第 2 幕：核心价值区块 */
.section {
  padding: 80rpx 40rpx;
}

.bg-white {
  background: #FFFFFF;
}

.vp-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.vp-badge {
  display: inline-block;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--brand-primary);
  background: var(--brand-light);
  padding: 6rpx 20rpx;
  border-radius: var(--radius-full);
  margin-bottom: 24rpx;
}

.vp-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-heading);
}

.vp-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

.vp-card {
  padding: 40rpx;
  border-radius: var(--radius-lg);
  border: 1rpx solid var(--border-light);
  background: #FFFFFF;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02);
}

.vp-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 32rpx;
}

.vp-icon.blue { background: #EFF6FF; }
.vp-icon.purple { background: #FAF5FF; }
.vp-icon.green { background: #F0FDF4; }
.vp-icon.orange { background: #FFF7ED; }

.vp-card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-heading);
  margin-bottom: 16rpx;
}

.vp-card-desc {
  font-size: 26rpx;
  color: var(--text-body);
  line-height: 1.6;
}

/* 第 3 幕：底部 CTA */
.cta-section {
  padding: 100rpx 40rpx;
  background: var(--bg-page);
  text-align: center;
  border-top: 1rpx solid var(--border-light);
}

.cta-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-heading);
  margin-bottom: 20rpx;
}

.cta-desc {
  font-size: 28rpx;
  color: var(--text-body);
  margin-bottom: 60rpx;
}

.login-link {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: var(--brand-primary);
  font-weight: 500;
}

.copyright {
  text-align: center;
  padding: 40rpx 0 60rpx;
  font-size: 22rpx;
  color: var(--text-placeholder);
  background: var(--bg-page);
}
