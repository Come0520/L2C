/* miniprogram/pages/leads/create/index.wxss */
.container {
    background-color: var(--bg-page);
    min-height: 100vh;
    padding: 32rpx;
    box-sizing: border-box;
}

.form-group {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 0 32rpx;
    margin-bottom: 32rpx;
    box-shadow: var(--shadow-sm);
}

.form-item {
    padding: 32rpx 0;
    border-bottom: 1rpx solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.form-item:last-child {
    border-bottom: none;
}

.form-item.vertical {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
}

.label {
    font-size: 28rpx;
    color: var(--text-heading);
    width: 160rpx;
    flex-shrink: 0;
}

.label.required::after {
    content: '*';
    color: var(--status-danger);
    margin-left: 4rpx;
}

.input {
    flex: 1;
    font-size: 28rpx;
    color: var(--text-body);
    text-align: right;
}

.textarea {
    width: 100%;
    height: 160rpx;
    font-size: 28rpx;
    color: var(--text-body);
    background: var(--bg-section);
    padding: 24rpx;
    box-sizing: border-box;
    border-radius: var(--radius-md);
}

.placeholder {
    color: var(--text-placeholder);
}

.picker-trigger {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 28rpx;
    color: var(--text-body);
}

.picker-trigger.empty {
    color: var(--text-placeholder);
}

.arrow {
    margin-left: 8rpx;
    color: var(--text-placeholder);
    font-size: 24rpx;
}

.btn-submit {
    margin-top: 64rpx;
    background: var(--brand-primary);
    color: white;
    border-radius: var(--radius-md);
    font-size: 32rpx;
    padding: 24rpx 0;
    box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-submit:active {
    background: var(--brand-hover);
}

.btn-submit.disabled {
    background: var(--bg-section);
    color: var(--text-muted);
    box-shadow: none;
}

/* Custom Picker Modal */
.picker-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s;
}

.picker-modal.show {
    visibility: visible;
    opacity: 1;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
}

.picker-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--bg-card);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    padding: 32rpx;
    transform: translateY(100%);
    transition: transform 0.3s;
}

.picker-modal.show .picker-content {
    transform: translateY(0);
}

.picker-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32rpx;
}

.picker-header .title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-heading);
}

.picker-header .close {
    font-size: 40rpx;
    color: var(--text-muted);
    padding: 10rpx;
}

.picker-body {
    display: flex;
    height: 500rpx;
    gap: 16rpx;
}

.level-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: var(--bg-section);
    border-radius: var(--radius-md);
    overflow: hidden;
}

.column-title {
    padding: 16rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--text-muted);
    border-bottom: 1rpx solid var(--border-light);
}

.column-list {
    flex: 1;
}

.list-item {
    padding: 20rpx 16rpx;
    font-size: 26rpx;
    color: var(--text-body);
    text-align: center;
    border-bottom: 1rpx solid var(--border-light);
}

.list-item.active {
    color: var(--brand-primary);
    background: var(--brand-light);
    font-weight: 500;
}

.picker-footer {
    margin-top: 32rpx;
}

.btn-confirm {
    background: var(--brand-primary);
    color: white;
    border-radius: var(--radius-md);
    font-size: 30rpx;
}
