/* miniprogram/pages/leads/create/index.wxss */
.container {
    background-color: #f8fafc;
    min-height: 100vh;
    padding: 32rpx;
    box-sizing: border-box;
}

.form-group {
    background: #fff;
    border-radius: 24rpx;
    padding: 0 32rpx;
    margin-bottom: 32rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.form-item {
    padding: 32rpx 0;
    border-bottom: 2rpx solid #f1f5f9;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.form-item:last-child {
    border-bottom: none;
}

.form-item.vertical {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
}

.label {
    font-size: 28rpx;
    color: #334155;
    width: 160rpx;
    flex-shrink: 0;
}

.label.required::after {
    content: '*';
    color: #ef4444;
    margin-left: 4rpx;
}

.input {
    flex: 1;
    font-size: 28rpx;
    color: #0f172a;
    text-align: right;
}

.textarea {
    width: 100%;
    height: 160rpx;
    font-size: 28rpx;
    color: #0f172a;
    background: #f8fafc;
    padding: 24rpx;
    box-sizing: border-box;
    border-radius: 12rpx;
}

.placeholder {
    color: #cbd5e1;
}

.picker-trigger {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 28rpx;
    color: #0f172a;
}

.picker-trigger.empty {
    color: #cbd5e1;
}

.arrow {
    margin-left: 8rpx;
    color: #cbd5e1;
    font-size: 24rpx;
}

.btn-submit {
    margin-top: 64rpx;
    background: #3b82f6;
    color: white;
    border-radius: 99rpx;
    font-size: 32rpx;
    padding: 24rpx 0;
    box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.3);
}

.btn-submit:active {
    opacity: 0.9;
}

.btn-submit.disabled {
    background: #94a3b8;
    box-shadow: none;
}

/* Custom Picker Modal */
.picker-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s;
}

.picker-modal.show {
    visibility: visible;
    opacity: 1;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
}

.picker-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
    padding: 32rpx;
    transform: translateY(100%);
    transition: transform 0.3s;
}

.picker-modal.show .picker-content {
    transform: translateY(0);
}

.picker-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32rpx;
}

.picker-header .title {
    font-size: 32rpx;
    font-weight: 600;
}

.picker-header .close {
    font-size: 40rpx;
    color: #94a3b8;
    padding: 10rpx;
}

.picker-body {
    display: flex;
    height: 500rpx;
    gap: 16rpx;
}

.level-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: #f8fafc;
    border-radius: 12rpx;
    overflow: hidden;
}

.column-title {
    padding: 16rpx;
    text-align: center;
    font-size: 24rpx;
    color: #64748b;
    border-bottom: 1rpx solid #e2e8f0;
}

.column-list {
    flex: 1;
}

.list-item {
    padding: 20rpx 16rpx;
    font-size: 26rpx;
    color: #334155;
    text-align: center;
    border-bottom: 1rpx solid #f1f5f9;
}

.list-item.active {
    color: #3b82f6;
    background: #eff6ff;
    font-weight: 500;
}

.picker-footer {
    margin-top: 32rpx;
}

.btn-confirm {
    background: #3b82f6;
    color: white;
    border-radius: 99rpx;
    font-size: 30rpx;
}

