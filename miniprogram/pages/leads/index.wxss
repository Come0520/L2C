/* pages/leads/index/index.wxss */
.container {
    background-color: var(--bg-page);
    height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Tabs */
.tabs {
    display: flex;
    background: var(--bg-card);
    border-bottom: 1rpx solid var(--border-light);
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 28rpx;
    color: var(--text-muted);
    position: relative;
    font-weight: 500;
}

.tab-item.active {
    color: var(--brand-primary);
    font-weight: 600;
}

.indicator {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 4rpx;
    background: var(--brand-primary);
    border-radius: 4rpx;
}

/* Search */
.search-bar {
    padding: 16rpx 24rpx;
    background: var(--bg-card);
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.search-input-wrap {
    background: var(--bg-section);
    border-radius: 99rpx;
    padding: 12rpx 24rpx;
    display: flex;
    align-items: center;
}

.search-input {
    flex: 1;
    margin-left: 16rpx;
    font-size: 28rpx;
    color: var(--text-heading);
    height: 48rpx;
}

/* List */
.crm-list {
    flex: 1;
    padding: 24rpx 32rpx;
    box-sizing: border-box;
    height: 0; /* Important for flex to work with scroll-view */
}

.crm-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: var(--shadow-sm);
    position: relative;
    transition: all 0.2s ease;
}

.crm-card:active {
    background: var(--bg-section);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx dashed var(--border-light);
}

.name-row {
    display: flex;
    align-items: center;
    gap: 16rpx;
    flex: 1;
}

.name {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-heading);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 240rpx;
}

.status-tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    border-radius: var(--radius-sm);
    background: var(--bg-section);
    color: var(--text-muted);
    font-weight: 500;
}

.status-tag.PENDING_ASSIGNMENT { background: #fee2e2; color: #ef4444; } /* Red */
.status-tag.PENDING_FOLLOWUP { background: #fef3c7; color: #d97706; } /* Yellow */
.status-tag.FOLLOWING_UP { background: var(--brand-light); color: var(--brand-primary); } /* Blue */
.status-tag.WON { background: #dcfce7; color: #16a34a; } /* Green */
.status-tag.VOID { background: var(--bg-section); color: var(--text-muted); } /* Gray */

.date {
    font-size: 22rpx;
    color: var(--text-muted);
    margin-top: 4rpx;
}

.card-body {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.info-row {
    display: flex;
    font-size: 26rpx;
    align-items: baseline;
}

.label {
    color: var(--text-muted);
    width: 90rpx;
    flex-shrink: 0;
}

.value {
    color: var(--text-body);
    flex: 1;
    word-break: break-all;
}

.fab-add {
    position: fixed;
    right: 48rpx;
    bottom: 64rpx;
    width: 100rpx;
    height: 100rpx;
    background: var(--brand-primary);
    border-radius: 50%;
    color: white;
    font-size: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.4);
    z-index: 100;
    padding-bottom: 10rpx; 
    transition: transform 0.1s;
}

.fab-add:active {
    transform: scale(0.95);
    background: var(--brand-hover);
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 160rpx;
    color: var(--text-placeholder);
    font-size: 28rpx;
}

.empty-img {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
}

.loading-more, .no-more {
    text-align: center;
    padding: 32rpx;
    color: var(--text-muted);
    font-size: 24rpx;
}
