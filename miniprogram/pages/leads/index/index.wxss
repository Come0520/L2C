
.container {
    background-color: #f8fafc;
    height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Tabs */
.tabs {
    display: flex;
    background: #fff;
    border-bottom: 2rpx solid #e2e8f0;
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 28rpx;
    color: #64748b;
    position: relative;
    font-weight: 500;
}

.tab-item.active {
    color: #3b82f6;
    font-weight: 600;
}

.indicator {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 4rpx;
    background: #3b82f6;
    border-radius: 4rpx;
}

/* Search */
.search-bar {
    padding: 16rpx 24rpx;
    background: #fff;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.search-input-wrap {
    background: #f1f5f9;
    border-radius: 99rpx;
    padding: 12rpx 24rpx;
    display: flex;
    align-items: center;
}

.search-input {
    flex: 1;
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #334155;
    height: 48rpx;
}

/* List */
.crm-list {
    flex: 1;
    padding: 24rpx 32rpx;
    box-sizing: border-box;
    height: 0; /* Important for flex to work with scroll-view */
}

.crm-card {
    background: #fff;
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
    position: relative;
}

.crm-card:active {
    background: #f8fafc;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
    padding-bottom: 16rpx;
    border-bottom: 2rpx dashed #f1f5f9;
}

.name-row {
    display: flex;
    align-items: center;
    gap: 16rpx;
    flex: 1;
}

.name {
    font-size: 32rpx;
    font-weight: 600;
    color: #1e293b;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 240rpx;
}

.status-tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    background: #f1f5f9;
    color: #64748b;
    font-weight: 500;
}

.status-tag.PENDING_ASSIGNMENT { background: #fee2e2; color: #ef4444; } /* Red */
.status-tag.PENDING_FOLLOWUP { background: #fef3c7; color: #d97706; } /* Yellow */
.status-tag.FOLLOWING_UP { background: #dbeafe; color: #2563eb; } /* Blue */
.status-tag.WON { background: #dcfce7; color: #16a34a; } /* Green */
.status-tag.VOID { background: #f1f5f9; color: #94a3b8; } /* Gray */

.date {
    font-size: 22rpx;
    color: #94a3b8;
    margin-top: 4rpx;
}

.card-body {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.info-row {
    display: flex;
    font-size: 26rpx;
    align-items: baseline;
}

.label {
    color: #94a3b8;
    width: 90rpx;
    flex-shrink: 0;
}

.value {
    color: #475569;
    flex: 1;
    word-break: break-all;
}

.fab-add {
    position: fixed;
    right: 48rpx;
    bottom: 64rpx;
    width: 100rpx;
    height: 100rpx;
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    border-radius: 50%;
    color: white;
    font-size: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.4);
    z-index: 100;
    padding-bottom: 10rpx; 
    transition: transform 0.1s;
}

.fab-add:active {
    transform: scale(0.95);
}

.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 160rpx;
    color: #cbd5e1;
    font-size: 28rpx;
}

.empty-img {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
}

.loading-more, .no-more {
    text-align: center;
    padding: 32rpx;
    color: #94a3b8;
    font-size: 24rpx;
}
