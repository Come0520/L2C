/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background-color: var(--bg-page);
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header {
  margin-bottom: 80rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--text-heading);
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-muted);
}

.form-card {
  width: 100%;
  background: var(--bg-card);
  padding: 48rpx 40rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: var(--text-heading);
  margin-bottom: 16rpx;
  font-weight: 600;
}

.input {
  width: 100%;
  height: 96rpx;
  background: var(--bg-section);
  border-radius: var(--radius-md);
  padding: 0 32rpx;
  font-size: 30rpx;
  color: var(--text-body);
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input:focus {
  border-color: var(--brand-primary);
  background: var(--bg-card);
  box-shadow: 0 0 0 4rpx var(--bg-primary-light);
}

.placeholder {
  color: var(--text-muted);
}

.btn-primary {
  margin-top: 60rpx;
  height: 96rpx;
  background: var(--brand-primary);
  border-radius: 99rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.4);
  transition: all 0.3s;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.link-area {
  margin-top: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.tips {
  color: var(--text-muted);
  margin-right: 12rpx;
}

.link {
  color: var(--brand-primary);
  font-weight: bold;
}

/* 错误提示横幅 */
.error-banner {
  background: var(--bg-error-light);
  border: 2rpx solid rgba(239, 68, 68, 0.2);
  border-radius: var(--radius-md);
  padding: 20rpx 24rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}

.error-text {
  font-size: 26rpx;
  color: var(--color-error);
  margin-left: 12rpx;
}

/* 密码输入框套件 */
.password-wrap {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input {
  flex: 1;
  padding-right: 80rpx !important;
}

.eye-toggle {
  position: absolute;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-muted);
}

/* Animations */
.animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
}

@keyframes slideUp {
    from { opacity: 0; transform: translateY(40rpx); }
    to { opacity: 1; transform: translateY(0); }
}
