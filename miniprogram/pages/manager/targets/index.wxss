/* pages/manager/targets/index.wxss */
.container {
    min-height: 100vh;
    background-color: #f8fafc;
    padding-bottom: 40rpx;
}

.header {
    background: #fff;
    padding: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.date-picker {
    font-size: 32rpx;
    font-weight: 600;
    color: #1e293b;
}

.stats {
    font-size: 28rpx;
    color: #64748b;
}

.list {
    margin-top: 20rpx;
    background: #fff;
}

.list-header {
    display: flex;
    padding: 24rpx 32rpx;
    background: #f1f5f9;
    font-size: 24rpx;
    color: #64748b;
}

.list-header text:nth-child(1) { flex: 2; }
.list-header text:nth-child(2) { flex: 1.5; text-align: right; }
.list-header text:nth-child(3) { flex: 0.5; text-align: right; }

.list-item {
    display: flex;
    align-items: center;
    padding: 32rpx;
    border-bottom: 1rpx solid #f1f5f9;
}

.list-item:active {
    background-color: #f8fafc;
}

.user-info {
    flex: 2;
    display: flex;
    align-items: center;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 32rpx;
    background: #e2e8f0;
    margin-right: 16rpx;
}

.name {
    font-size: 28rpx;
    color: #334155;
    font-weight: 500;
}

.amount {
    flex: 1.5;
    text-align: right;
    font-size: 32rpx;
    color: #1e293b;
    font-weight: 600;
    font-family: monospace;
}

.amount.empty {
    color: #cbd5e1;
    font-size: 28rpx;
    font-weight: 400;
}

.action {
    flex: 0.5;
    text-align: right;
}

.edit-btn {
    font-size: 26rpx;
    color: #3b82f6;
    padding: 8rpx 16rpx;
    background: #eff6ff;
    border-radius: 8rpx;
}

/* Dialog */
.dialog-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s;
    z-index: 100;
}

.dialog-mask.show {
    opacity: 1;
    visibility: visible;
}

.dialog-content {
    width: 80%;
    background: #fff;
    border-radius: 24rpx;
    overflow: hidden;
}

.dialog-header {
    padding: 32rpx;
    text-align: center;
    font-weight: 600;
    font-size: 32rpx;
    border-bottom: 1rpx solid #f1f5f9;
}

.dialog-body {
    padding: 40rpx 32rpx;
}

.user-preview {
    text-align: center;
    font-size: 28rpx;
    color: #64748b;
    margin-bottom: 32rpx;
}

.target-input {
    background: #f8fafc;
    height: 88rpx;
    padding: 0 24rpx;
    border-radius: 12rpx;
    font-size: 32rpx;
    text-align: center;
}

.dialog-footer {
    display: flex;
    border-top: 1rpx solid #f1f5f9;
}

.btn {
    flex: 1;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 32rpx;
    background: #fff;
    padding: 0;
    margin: 0;
    border-radius: 0;
}

.btn::after { border: none; }

.btn.cancel { color: #64748b; border-right: 1rpx solid #f1f5f9; }
.btn.confirm { color: #3b82f6; font-weight: 500; }
