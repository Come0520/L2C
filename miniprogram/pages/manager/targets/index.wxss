/* pages/manager/targets/index.wxss */
.container {
    min-height: 100vh;
    background-color: var(--bg-page);
    padding: 32rpx;
    padding-bottom: env(safe-area-inset-bottom);
    box-sizing: border-box;
}

.card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    margin-bottom: 32rpx;
    overflow: hidden;
}

.header-card {
    padding: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.date-picker {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-heading);
}

.stats {
    font-size: 28rpx;
    color: var(--text-muted);
}

.list-card {
    padding-bottom: 20rpx;
}

.list-header {
    display: flex;
    padding: 24rpx 32rpx;
    background: var(--bg-section);
    font-size: 24rpx;
    color: var(--text-muted);
}

.list-header text:nth-child(1) { flex: 2; }
.list-header text:nth-child(2) { flex: 1.5; text-align: right; }
.list-header text:nth-child(3) { flex: 0.5; text-align: right; }

.list-item {
    display: flex;
    align-items: center;
    padding: 32rpx;
    border-bottom: 1rpx solid var(--border-light);
}

.list-item:last-child {
    border-bottom: none;
}

.list-item:active {
    background-color: var(--bg-section);
}

.user-info {
    flex: 2;
    display: flex;
    align-items: center;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 32rpx;
    background: var(--bg-section);
    margin-right: 16rpx;
}

.name {
    font-size: 28rpx;
    color: var(--text-body);
    font-weight: 500;
}

.amount {
    flex: 1.5;
    text-align: right;
    font-size: 32rpx;
    color: var(--text-heading);
    font-weight: 600;
    font-family: monospace;
}

.amount.empty {
    color: var(--text-muted);
    font-size: 28rpx;
    font-weight: 400;
}

.action {
    flex: 0.5;
    text-align: right;
}

.edit-btn {
    font-size: 26rpx;
    color: var(--brand-primary);
    padding: 8rpx 16rpx;
    background: var(--bg-primary-light);
    border-radius: var(--radius-sm);
}

/* Dialog */
.dialog-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s;
    z-index: 100;
}

.dialog-mask.show {
    opacity: 1;
    visibility: visible;
}

.dialog-content {
    width: 80%;
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    overflow: hidden;
}

.dialog-header {
    padding: 32rpx;
    text-align: center;
    font-weight: 600;
    font-size: 32rpx;
    border-bottom: 1rpx solid var(--border-light);
    color: var(--text-heading);
}

.dialog-body {
    padding: 40rpx 32rpx;
}

.user-preview {
    text-align: center;
    font-size: 28rpx;
    color: var(--text-muted);
    margin-bottom: 32rpx;
}

.target-input {
    background: var(--bg-section);
    height: 88rpx;
    padding: 0 24rpx;
    border-radius: var(--radius-md);
    font-size: 32rpx;
    text-align: center;
    color: var(--text-body);
}

.dialog-footer {
    display: flex;
    border-top: 1rpx solid var(--border-light);
}

.btn {
    flex: 1;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 32rpx;
    background: var(--bg-card);
    padding: 0;
    margin: 0;
    border-radius: 0;
}

.btn::after { border: none; }

.btn.cancel { color: var(--text-muted); border-right: 1rpx solid var(--border-light); }
.btn.confirm { color: var(--brand-primary); font-weight: bold; }
