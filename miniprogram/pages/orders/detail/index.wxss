/* pages/orders/detail/index.wxss */
.container {
    background-color: #f8fafc;
    min-height: 100vh;
    padding-bottom: 40rpx;
}

.header-status {
    background: #fff;
    padding: 40rpx;
    margin-bottom: 20rpx;
}

.status-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #0f172a;
    margin-bottom: 12rpx;
}

.order-no {
    font-size: 26rpx;
    color: #94a3b8;
}

.section {
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
}

.section-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #334155;
    margin-bottom: 24rpx;
    border-left: 6rpx solid #3b82f6;
    padding-left: 12rpx;
}

.item-row {
    display: flex;
    justify-content: space-between;
    padding: 16rpx 0;
    border-bottom: 1rpx solid #f1f5f9;
}

.prod-name { font-size: 28rpx; color: #334155; display: block; }
.sku { font-size: 24rpx; color: #94a3b8; }

.item-meta { text-align: right; }
.item-meta .price { display: block; font-weight: 500; margin-top: 4rpx; }

.total-row {
    text-align: right;
    padding-top: 20rpx;
    font-size: 30rpx;
    font-weight: 600;
}

.pay-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f1f5f9;
}

.pay-name { font-size: 28rpx; color: #334155; }
.pay-status { font-size: 22rpx; margin-left: 12rpx; padding: 2rpx 8rpx; border-radius: 4rpx; background: #f1f5f9; color: #94a3b8; }
.pay-status.PAID { background: #dcfce7; color: #166534; }

.pay-right { display: flex; align-items: center; gap: 16rpx; }
.pay-amount { font-weight: 500; font-size: 28rpx; }
.btn-pay-action { 
    margin: 0 !important; 
    font-size: 22rpx; 
    padding: 8rpx 20rpx; 
    background: #3b82f6; 
    color: #fff; 
    border-radius: 30rpx;
}
.proof-thumb { width: 60rpx; height: 60rpx; border-radius: 8rpx; border: 1rpx solid #ddd; }

/* Modal */
.pay-modal {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    z-index: 100;
    visibility: hidden;
    opacity: 0;
    transition: all 0.2s;
}
.pay-modal.show { visibility: visible; opacity: 1; }

.modal-mask {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.5);
}

.modal-content {
    position: absolute;
    bottom: 0; left: 0; right: 0;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
    padding: 40rpx;
    transform: translateY(100%);
    transition: transform 0.3s;
}
.pay-modal.show .modal-content { transform: translateY(0); }

.modal-header { text-align: center; font-size: 32rpx; font-weight: 600; margin-bottom: 40rpx; }

.form-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f1f5f9;
}
.form-item.col { flex-direction: column; align-items: flex-start; gap: 20rpx; }

.input { text-align: right; }
.upload-box {
    width: 160rpx; height: 160rpx;
    background: #f8fafc;
    border: 2rpx dashed #cbd5e1;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
    font-size: 40rpx;
}
.upload-box .preview { width: 100%; height: 100%; border-radius: 12rpx; }

.modal-footer {
    display: flex;
    gap: 20rpx;
    margin-top: 40rpx;
}
.btn-cancel, .btn-submit { flex: 1; font-size: 28rpx; border-radius: 40rpx; }
.btn-cancel { background: #f1f5f9; color: #475569; }
.btn-submit { background: #3b82f6; color: #fff; }
