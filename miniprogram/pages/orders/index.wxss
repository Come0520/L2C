/* pages/orders/index.wxss */
.container {
    background-color: var(--bg-page);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.tabs {
    display: flex;
    background: var(--bg-card);
    padding: 0 20rpx;
    position: sticky;
    top: 0;
    z-index: 10;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.tab-item {
    flex: 1;
    text-align: center;
    padding: 28rpx 0;
    font-size: 28rpx;
    color: var(--text-muted);
    position: relative;
    transition: all 0.3s;
}

.tab-item.active {
    color: var(--text-heading);
    font-weight: 600;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 48rpx;
    height: 6rpx;
    background: var(--brand-primary);
    border-radius: 6rpx 6rpx 0 0;
}

.order-list {
    flex: 1;
    padding: 24rpx;
    box-sizing: border-box;
    height: 100vh;
}

.card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    padding: 32rpx;
    margin-bottom: 24rpx;
    overflow: hidden;
    position: relative;
}

.order-card:active {
    transform: scale(0.98);
    transition: transform 0.2s;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 24rpx;
    border-bottom: 1rpx dashed var(--border-light);
    margin-bottom: 24rpx;
}

.order-no {
    font-size: 28rpx;
    color: var(--text-heading);
    font-weight: 600;
    font-family: monospace;
}

.status {
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 8rpx;
    background: var(--bg-section);
    color: var(--text-muted);
    font-weight: 500;
}

.status.PENDING_PAYMENT { background: rgba(245, 158, 11, 0.1); color: var(--color-warning); }
.status.IN_PRODUCTION { background: rgba(16, 185, 129, 0.1); color: var(--color-success); }
.status.COMPLETED { background: var(--bg-primary-light); color: var(--brand-primary); }

.card-body .row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16rpx;
    font-size: 28rpx;
}

.card-body .row:last-child {
    margin-bottom: 0;
}

.row .label { color: var(--text-muted); }
.row .value { color: var(--text-body); }
.row .value.price { color: var(--text-heading); font-weight: 600; font-family: monospace; }
.row .value.paid { color: var(--color-success); font-weight: 500; }

.empty-state {
    text-align: center;
    padding: 120rpx 0;
    color: var(--text-muted);
    font-size: 28rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.empty-icon {
    font-size: 80rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
}

/* 动画 */
.animate-slide-up {
    opacity: 0;
    animation: slideUp 0.5s ease-out forwards;
    transform: translateY(20rpx);
}

@keyframes slideUp {
    to { opacity: 1; transform: translateY(0); }
}
