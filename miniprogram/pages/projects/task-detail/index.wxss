/* pages/projects/task-detail/index.wxss */
.container {
    padding: 24rpx;
    background: #f8fafc;
    min-height: 100vh;
    padding-bottom: 120rpx;
}

.card {
    background: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 24rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid #f1f5f9;
}
.title { font-weight: bold; font-size: 30rpx; color: #0f172a; }
.status { font-size: 26rpx; }
.status.PENDING_ACCEPT { color: #c2410c; }
.status.COMPLETED { color: #15803d; }

.row { display: flex; font-size: 28rpx; margin-bottom: 16rpx; }
.label { color: #94a3b8; width: 140rpx; flex-shrink: 0; }
.value { color: #334155; flex: 1; }
.phone { color: #3b82f6; }

.item-row { display: flex; justify-content: space-between; align-items: center; padding: 16rpx 0; border-bottom: 1rpx solid #f8fafc; }
.item-row:last-child { border-bottom: none; }
.room { font-weight: 500; font-size: 28rpx; color: #334155; }
.product { font-size: 26rpx; color: #64748b; margin-top: 4rpx; }
.item-qty { font-weight: bold; }

.footer-actions {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    padding: 24rpx;
    background: #fff;
    box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}
.btn-primary {
    background: #0f172a;
    color: #fff;
    border-radius: 12rpx;
}
