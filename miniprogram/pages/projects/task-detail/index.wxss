/* pages/projects/task-detail/index.wxss */
.container {
    background: var(--bg-page);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.content {
    flex: 1;
    padding: 32rpx;
    box-sizing: border-box;
    height: 100vh;
    padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

.card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 32rpx;
    margin-bottom: 32rpx;
    box-shadow: var(--shadow-sm);
}

.header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 32rpx;
    padding-bottom: 24rpx;
    border-bottom: 1rpx dashed var(--border-light);
}
.title { font-weight: bold; font-size: 32rpx; color: var(--text-heading); }

.status { font-size: 26rpx; padding: 4rpx 12rpx; background: var(--bg-section); border-radius: 6rpx; color: var(--text-muted); font-weight: 500;}
.status.PENDING_ACCEPT { color: var(--color-warning); background: rgba(245, 158, 11, 0.1); }
.status.IN_PROGRESS { color: var(--brand-primary); background: rgba(79, 70, 229, 0.1); }
.status.COMPLETED { color: var(--color-success); background: rgba(16, 185, 129, 0.1); }

.row { display: flex; font-size: 28rpx; margin-bottom: 16rpx; line-height: 1.5; }
.label { color: var(--text-muted); width: 140rpx; flex-shrink: 0; }
.value { color: var(--text-body); flex: 1; font-weight: 500;}
.phone { color: var(--brand-primary); text-decoration: underline; }

.item-row { display: flex; justify-content: space-between; align-items: center; padding: 24rpx 0; border-bottom: 1rpx dashed var(--border-light); }
.item-row:last-child { border-bottom: none; padding-bottom: 0; }

.room { font-weight: bold; font-size: 28rpx; color: var(--text-heading); margin-bottom: 8rpx; }
.product { font-size: 26rpx; color: var(--text-muted); }
.item-qty { font-weight: bold; font-size: 32rpx; color: var(--text-heading); font-family: monospace; }

.footer-actions {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    padding: 32rpx;
    background: var(--bg-card);
    box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.06);
    padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
    z-index: 100;
}

.primary-btn {
    width: 100%;
    height: 96rpx;
    background: var(--brand-primary);
    border-radius: 999rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.3);
}

.primary-btn:active { opacity: 0.9; transform: scale(0.98); }

/* 动画 */
.animate-slide-up {
    opacity: 0;
    animation: slideUp 0.5s ease-out forwards;
    transform: translateY(20rpx);
}

@keyframes slideUp {
    to { opacity: 1; transform: translateY(0); }
}
