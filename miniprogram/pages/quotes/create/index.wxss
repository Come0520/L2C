/* pages/quotes/create/index.wxss */
.container {
    padding: 32rpx;
    padding-bottom: 200rpx;
    background-color: var(--bg-page);
    min-height: 100vh;
}

.card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: var(--shadow-sm);
}

.section-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 16rpx;
    color: var(--text-heading);
}

.input {
    border: 1rpx solid var(--border-light);
    padding: 16rpx;
    border-radius: var(--radius-md);
    color: var(--text-body);
}

/* Room Card */
.room-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid var(--border-light);
    padding-bottom: 16rpx;
    margin-bottom: 16rpx;
}

.room-name-input {
    font-size: 32rpx;
    font-weight: bold;
    color: var(--text-heading);
}

.btn-remove {
    color: var(--text-placeholder);
    font-size: 40rpx;
    padding: 0 16rpx;
}

/* Items */
.item-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--bg-section);
    padding: 16rpx;
    border-radius: var(--radius-md);
    margin-bottom: 12rpx;
}

.item-info {
    display: flex;
    flex-direction: column;
}

.item-name {
    font-size: 28rpx;
    color: var(--text-heading);
    font-weight: 500;
}

.item-dims {
    font-size: 24rpx;
    color: var(--text-muted);
}

.item-price {
    display: flex;
    align-items: center;
    gap: 16rpx;
    font-size: 28rpx;
    color: var(--brand-primary);
    font-weight: bold;
}

.btn-del-item {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background: #fee2e2;
    color: var(--status-danger);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

.btn-add-item {
    text-align: center;
    padding: 20rpx;
    border: 2rpx dashed var(--border-light);
    border-radius: var(--radius-md);
    color: var(--text-muted);
    font-size: 28rpx;
    margin-top: 16rpx;
}

.btn-add-room {
    background: var(--bg-card);
    color: var(--brand-primary);
    border: 2rpx dashed var(--brand-primary);
    margin-top: 32rpx;
    border-radius: var(--radius-md);
}

/* Footer */
.footer-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--bg-card);
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
    border-top: 1rpx solid var(--border-light);
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
    z-index: 100;
}

.total-preview {
    font-size: 32rpx;
    font-weight: bold;
    color: var(--text-heading);
}

.btn-submit {
    background: var(--brand-primary);
    color: #FFFFFF;
    font-size: 28rpx;
    padding: 0 48rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 99rpx;
    margin: 0;
    box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-submit:active {
    background: var(--brand-hover);
}

/* Loading Mask */
.loading-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(255,255,255,0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
    color: var(--text-muted);
}

/* Customer Selection */
.customer-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12rpx 0;
}

.customer-name {
    font-size: 32rpx;
    color: var(--text-heading);
    font-weight: 500;
}

.customer-placeholder {
    font-size: 28rpx;
    color: var(--text-placeholder);
}

.arrow {
    color: var(--text-placeholder);
    font-size: 28rpx;
}

/* Empty Items */
.empty-items {
    padding: 32rpx;
    text-align: center;
}

.empty-text {
    color: var(--text-placeholder);
    font-size: 26rpx;
}

/* Price Text */
.price-text {
    color: var(--brand-primary);
}

/* Total */
.total-label {
    color: var(--text-muted);
    margin-right: 8rpx;
}

.total-amount {
    color: var(--status-danger);
    font-size: 36rpx;
}

/* Room Picker Modal */
.room-picker-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: flex-end;
    z-index: 1000;
}

.room-picker-panel {
    background: var(--bg-card);
    width: 100%;
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    padding: 32rpx;
    padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.picker-title {
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 32rpx;
    color: var(--text-heading);
}

.picker-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 32rpx;
}

.picker-item {
    background: var(--bg-section);
    padding: 20rpx 32rpx;
    border-radius: var(--radius-md);
    font-size: 28rpx;
    color: var(--text-body);
}

.picker-item:active {
    background: var(--brand-light);
    color: var(--brand-primary);
}

.picker-cancel {
    text-align: center;
    padding: 24rpx;
    color: var(--text-muted);
    font-size: 28rpx;
}

.footer-spacer {
    height: 200rpx;
}
