/* pages/quotes/create/index.wxss */
.container {
    padding: 32rpx;
    padding-bottom: 200rpx;
    background-color: #f8fafc;
    min-height: 100vh;
}

.card {
    background: #fff;
    border-radius: 20rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.section-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 16rpx;
    color: #334155;
}

.input {
    border: 2rpx solid #e2e8f0;
    padding: 16rpx;
    border-radius: 12rpx;
    color: #334155;
}

/* Room Card */
.room-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #f1f5f9;
    padding-bottom: 16rpx;
    margin-bottom: 16rpx;
}

.room-name-input {
    font-size: 32rpx;
    font-weight: bold;
    color: #1e293b;
}

.btn-remove {
    color: #cbd5e1;
    font-size: 40rpx;
    padding: 0 16rpx;
}

/* Items */
.item-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f8fafc;
    padding: 16rpx;
    border-radius: 12rpx;
    margin-bottom: 12rpx;
}

.item-info {
    display: flex;
    flex-direction: column;
}

.item-name {
    font-size: 28rpx;
    color: #334155;
    font-weight: 500;
}

.item-dims {
    font-size: 24rpx;
    color: #94a3b8;
}

.item-price {
    display: flex;
    align-items: center;
    gap: 16rpx;
    font-size: 28rpx;
    color: #3b82f6;
    font-weight: bold;
}

.btn-del-item {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background: #fee2e2;
    color: #ef4444;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}

.btn-add-item {
    text-align: center;
    padding: 20rpx;
    border: 2rpx dashed #cbd5e1;
    border-radius: 12rpx;
    color: #64748b;
    font-size: 28rpx;
    margin-top: 16rpx;
}

.btn-add-room {
    background: #fff;
    color: #3b82f6;
    border: 2rpx dashed #3b82f6;
    margin-top: 32rpx;
}

/* Footer */
.footer-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
    border-top: 2rpx solid #f1f5f9;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
    z-index: 100;
}

.total-preview {
    font-size: 32rpx;
    font-weight: bold;
    color: #1e293b;
}

.btn-submit {
    background: #3b82f6;
    color: #fff;
    font-size: 28rpx;
    padding: 0 48rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 99rpx;
    margin: 0;
}

/* Loading Mask */
.loading-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(255,255,255,0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
    color: #64748b;
}

/* Customer Selection */
.customer-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12rpx 0;
}

.customer-name {
    font-size: 32rpx;
    color: #1e293b;
    font-weight: 500;
}

.customer-placeholder {
    font-size: 28rpx;
    color: #94a3b8;
}

.arrow {
    color: #cbd5e1;
    font-size: 28rpx;
}

/* Empty Items */
.empty-items {
    padding: 32rpx;
    text-align: center;
}

.empty-text {
    color: #cbd5e1;
    font-size: 26rpx;
}

/* Price Text */
.price-text {
    color: #3b82f6;
}

/* Total */
.total-label {
    color: #64748b;
    margin-right: 8rpx;
}

.total-amount {
    color: #ef4444;
    font-size: 36rpx;
}

/* Room Picker Modal */
.room-picker-mask {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    align-items: flex-end;
    z-index: 1000;
}

.room-picker-panel {
    background: #fff;
    width: 100%;
    border-radius: 32rpx 32rpx 0 0;
    padding: 32rpx;
    padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.picker-title {
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 32rpx;
    color: #1e293b;
}

.picker-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 32rpx;
}

.picker-item {
    background: #f1f5f9;
    padding: 20rpx 32rpx;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #334155;
}

.picker-item:active {
    background: #e2e8f0;
}

.picker-cancel {
    text-align: center;
    padding: 24rpx;
    color: #64748b;
    font-size: 28rpx;
}

.footer-spacer {
    height: 200rpx;
}

