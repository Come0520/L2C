/* pages/quotes/detail.wxss */

/* New Clean Theme */
.container {
  min-height: 100vh;
  background-color: var(--bg-page);
  color: var(--text-body);
  padding: 32rpx;
  box-sizing: border-box;
}

/* 纸张容器/主边框 */
.content-wrapper {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  position: relative;
}

.section {
  padding: 40rpx;
  position: relative;
  z-index: 2;
}

/* 顶部标题区 */
.quote-info {
    text-align: center;
    border-bottom: 2rpx dashed var(--border-light);
    margin-bottom: 0;
    padding-bottom: 40rpx;
}

.header-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16rpx;
    margin-bottom: 16rpx;
}

.title { 
    font-size: 40rpx; 
    font-weight: 700; 
    color: var(--text-heading); 
    letter-spacing: 2rpx;
}

/* 状态徽章 */
.status.tag {
    display: inline-block;
    padding: 4rpx 16rpx;
    border-radius: var(--radius-sm);
    background: var(--bg-section);
    color: var(--text-muted);
    font-size: 22rpx;
    font-weight: 500;
}

.sub-info {
    color: var(--text-muted); 
    font-size: 24rpx; 
    font-family: monospace;
    margin-bottom: 16rpx;
}

.customer { 
    color: var(--text-body); 
    font-size: 28rpx; 
    font-weight: 500;
}

/* 商品列表 - 菜单风格 */
.items {
    margin: 40rpx 0;
    text-align: left;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.item-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-right: 24rpx;
}

.product-name {
    font-size: 28rpx;
    color: var(--text-heading);
    font-weight: 600;
    line-height: 1.4;
}

.sku-info {
    font-size: 24rpx;
    color: var(--text-muted);
    margin-top: 8rpx;
}

.item-price {
    flex-shrink: 0;
}

.price {
    font-size: 32rpx;
    color: var(--brand-primary);
    font-weight: 700;
}

/* 总计账单 */
.total {
  padding: 32rpx 0 0 0;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.total text {
    font-size: 28rpx;
    color: var(--text-heading);
    font-weight: 600;
}

.amount { 
    font-size: 48rpx !important; 
    color: var(--brand-primary) !important;
    font-family: 'DIN Alternate', sans-serif;
}

/* 签字区域 */
.section-title {
  font-size: 28rpx;
  color: var(--text-heading);
  text-align: center;
  margin-bottom: 32rpx;
  font-weight: 600;
}

.signature-wrapper {
  margin-bottom: 40rpx;
  background: var(--bg-section);
  border-radius: var(--radius-md);
  overflow: hidden;
  border: 1rpx solid var(--border-light);
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 24rpx;
}

.actions-row {
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
}

.btn-clear {
  flex: 1;
  background: var(--bg-section);
  color: var(--text-heading);
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: var(--radius-md);
}

.btn-confirm, .btn-primary {
  flex: 2;
  background: var(--brand-primary);
  color: #FFFFFF;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 500;
  font-size: 30rpx;
  border-radius: var(--radius-md);
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.2);
}

.btn-confirm:active, .btn-primary:active {
  background: var(--brand-hover);
}

.signed-section {
    text-align: center;
    margin-top: 0;
    padding-top: 0;
    border-top: 1rpx dashed var(--border-light);
}

.signed-img {
    width: 300rpx;
    height: 150rpx;
    margin: 20rpx auto;
}

.signed-time {
    color: var(--text-muted);
    font-size: 24rpx;
    font-family: monospace;
}

.loading-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    color: var(--text-muted);
}
