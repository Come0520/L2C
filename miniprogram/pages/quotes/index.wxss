/* pages/quotes/index.wxss */
.container {
    background-color: var(--bg-page);
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.search-bar {
    padding: 24rpx 32rpx;
    background: var(--bg-card);
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.search-input-wrap {
    background: var(--bg-section);
    border-radius: 99rpx;
    padding: 16rpx 24rpx;
    display: flex;
    align-items: center;
}

.search-input {
    flex: 1;
    margin-left: 16rpx;
    font-size: 28rpx;
    color: var(--text-heading);
}

.list-container {
    flex: 1;
    padding: 24rpx 32rpx;
    box-sizing: border-box;
}

.quote-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
}

.quote-card:active {
    background: var(--bg-section);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid var(--border-light);
}

.title-row {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: var(--text-heading);
}

.status-tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    border-radius: var(--radius-sm);
    background: var(--bg-section);
    color: var(--text-muted);
}

.status-tag.DRAFT { background: #fff7ed; color: #ea580c; }
.status-tag.CONFIRMED { background: #ecfdf5; color: #059669; }

.date {
    font-size: 22rpx;
    color: var(--text-muted);
}

.card-body {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.info-row {
    display: flex;
    font-size: 26rpx;
    align-items: center;
}

.label {
    color: var(--text-muted);
    width: 90rpx;
}

.value {
    color: var(--text-body);
}

.value.price {
    font-size: 32rpx;
    font-weight: 700;
    color: var(--brand-primary);
    font-family: 'DIN Alternate', sans-serif;
}

.value.code {
    font-family: monospace;
    background: var(--bg-section);
    padding: 2rpx 8rpx;
    border-radius: var(--radius-sm);
    font-size: 22rpx;
    color: var(--text-muted);
}

.fab-add {
    position: fixed;
    right: 48rpx;
    bottom: 64rpx; /* Raise above TabBar */
    width: 112rpx;
    height: 112rpx;
    background: var(--brand-primary);
    border-radius: 50%;
    color: #FFFFFF;
    font-size: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
    z-index: 100;
    padding-bottom: 10rpx;
    transition: transform 0.1s;
}

.fab-add:active {
    background: var(--brand-hover);
}

.empty-state {
    text-align: center;
    padding-top: 120rpx;
    color: var(--text-placeholder);
    font-size: 28rpx;
}

.empty-img {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
}

/* 加载状态 */
.loading-state {
    text-align: center;
    padding: 80rpx 0;
    color: var(--text-muted);
    font-size: 28rpx;
}

/* 加载更多 */
.load-more {
    text-align: center;
    padding: 24rpx 0;
    color: var(--text-placeholder);
    font-size: 24rpx;
}

/* 更多状态标签颜色 */
.status-tag.PENDING_APPROVAL { background: #fef3c7; color: #d97706; }
.status-tag.APPROVED { background: var(--brand-light); color: var(--brand-primary); }
.status-tag.PENDING_CUSTOMER { background: #ede9fe; color: #7c3aed; }
.status-tag.ACCEPTED { background: #ecfdf5; color: #059669; }
.status-tag.REJECTED { background: #fee2e2; color: #dc2626; }
.status-tag.LOCKED { background: #e0e7ff; color: #4f46e5; }
.status-tag.ORDERED { background: #d1fae5; color: #047857; }
.status-tag.EXPIRED { background: var(--bg-section); color: var(--text-muted); }

/* FAB 按钮优化 */
.fab-icon {
    width: 48rpx;
    height: 48rpx;
}

.fab-active {
    opacity: 0.8;
    transform: scale(0.95);
}
