/* pages/quotes/index.wxss */
.container {
    background-color: #f8fafc;
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.search-bar {
    padding: 24rpx 32rpx;
    background: #fff;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.search-input-wrap {
    background: #f1f5f9;
    border-radius: 99rpx;
    padding: 16rpx 24rpx;
    display: flex;
    align-items: center;
}

.search-input {
    flex: 1;
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #334155;
}

.list-container {
    flex: 1;
    padding: 24rpx 32rpx;
    box-sizing: border-box;
}

.quote-card {
    background: #fff;
    border-radius: 20rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24rpx;
    padding-bottom: 16rpx;
    border-bottom: 2rpx solid #f8fafc;
}

.title-row {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #1e293b;
}

.status-tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    background: #f1f5f9;
    color: #64748b;
}

.status-tag.DRAFT { background: #fff7ed; color: #ea580c; }
.status-tag.CONFIRMED { background: #ecfdf5; color: #059669; }

.date {
    font-size: 22rpx;
    color: #94a3b8;
}

.card-body {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
}

.info-row {
    display: flex;
    font-size: 26rpx;
    align-items: center;
}

.label {
    color: #94a3b8;
    width: 90rpx;
}

.value {
    color: #475569;
}

.value.price {
    font-size: 30rpx;
    font-weight: 700;
    color: #d4af37; /* Black & Gold accent */
    font-family: 'DIN Alternate', sans-serif;
}

.value.code {
    font-family: monospace;
    background: #f8fafc;
    padding: 2rpx 8rpx;
    border-radius: 6rpx;
    font-size: 22rpx;
}

.fab-add {
    position: fixed;
    right: 48rpx;
    bottom: 64rpx; /* Raise above TabBar */
    width: 112rpx;
    height: 112rpx;
    background: linear-gradient(135deg, #d4af37, #fceabb);
    border-radius: 50%;
    color: #1a1a1a;
    font-size: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.4);
    z-index: 100;
    padding-bottom: 10rpx;
}

.empty-state {
    text-align: center;
    padding-top: 120rpx;
    color: #cbd5e1;
    font-size: 28rpx;
}

.empty-img {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
    opacity: 0.5;
}

/* 加载状态 */
.loading-state {
    text-align: center;
    padding: 80rpx 0;
    color: #94a3b8;
    font-size: 28rpx;
}

/* 加载更多 */
.load-more {
    text-align: center;
    padding: 24rpx 0;
    color: #cbd5e1;
    font-size: 24rpx;
}

/* 更多状态标签颜色 */
.status-tag.PENDING_APPROVAL { background: #fef3c7; color: #d97706; }
.status-tag.APPROVED { background: #dbeafe; color: #2563eb; }
.status-tag.PENDING_CUSTOMER { background: #ede9fe; color: #7c3aed; }
.status-tag.ACCEPTED { background: #ecfdf5; color: #059669; }
.status-tag.REJECTED { background: #fee2e2; color: #dc2626; }
.status-tag.LOCKED { background: #e0e7ff; color: #4f46e5; }
.status-tag.ORDERED { background: #d1fae5; color: #047857; }
.status-tag.EXPIRED { background: #f1f5f9; color: #94a3b8; }

/* FAB 按钮优化 */
.fab-icon {
    width: 48rpx;
    height: 48rpx;
}

.fab-active {
    opacity: 0.8;
    transform: scale(0.95);
}
