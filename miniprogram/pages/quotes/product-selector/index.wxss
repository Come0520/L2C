/* pages/quotes/product-selector/index.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #f8fafc;
}

.search-bar {
    padding: 24rpx;
    background: #fff;
    border-bottom: 2rpx solid #f1f5f9;
}

.search-input {
    background: #f1f5f9;
    padding: 16rpx 24rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
}

.product-list {
    flex: 1;
    padding: 24rpx;
    box-sizing: border-box;
}

.product-item {
    background: #fff;
    padding: 24rpx;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.prod-img {
    width: 120rpx;
    height: 120rpx;
    background: #e2e8f0;
    border-radius: 12rpx;
    margin-right: 24rpx;
}

.prod-info {
    flex: 1;
}

.prod-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #1e293b;
    margin-bottom: 8rpx;
}

.prod-meta {
    margin-bottom: 8rpx;
}

.tag {
    font-size: 22rpx;
    background: #eff6ff;
    color: #3b82f6;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-right: 12rpx;
}

.sku {
    font-size: 22rpx;
    color: #94a3b8;
}

.prod-price {
    font-size: 32rpx;
    font-weight: bold;
    color: #f59e0b;
}

.btn-pick {
    background: #3b82f6;
    color: #fff;
    font-size: 24rpx;
    padding: 12rpx 24rpx;
    border-radius: 99rpx;
}
