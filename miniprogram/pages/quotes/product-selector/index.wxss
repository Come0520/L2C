/* pages/quotes/product-selector/index.wxss */
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--bg-page);
}

.search-bar {
    padding: 24rpx;
    background: var(--bg-card);
    border-bottom: 1rpx solid var(--border-light);
}

.search-input {
    background: var(--bg-section);
    padding: 16rpx 24rpx;
    border-radius: var(--radius-md);
    font-size: 28rpx;
    color: var(--text-body);
}

.product-list {
    flex: 1;
    padding: 24rpx;
    box-sizing: border-box;
}

.product-item {
    background: var(--bg-card);
    padding: 24rpx;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    box-shadow: var(--shadow-sm);
}

.prod-icon {
    width: 100rpx;
    height: 100rpx;
    background: var(--brand-light);
    border-radius: var(--radius-md);
    margin-right: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48rpx;
}

.prod-info {
    flex: 1;
}

.prod-name {
    font-size: 30rpx;
    font-weight: bold;
    color: var(--text-heading);
    margin-bottom: 8rpx;
}

.prod-meta {
    margin-bottom: 8rpx;
}

.tag {
    font-size: 22rpx;
    background: var(--brand-light);
    color: var(--brand-primary);
    padding: 4rpx 12rpx;
    border-radius: var(--radius-sm);
    margin-right: 12rpx;
}

.sku {
    font-size: 22rpx;
    color: var(--text-muted);
}

.prod-price {
    font-size: 32rpx;
    font-weight: bold;
    color: var(--brand-primary);
    font-family: 'DIN Alternate', sans-serif;
}

.btn-pick {
    background: var(--brand-primary);
    color: #fff;
    font-size: 24rpx;
    padding: 12rpx 24rpx;
    border-radius: 99rpx;
}
.btn-pick:active {
    background: var(--brand-hover);
}
