/* pages/register/register.wxss */

/* 容器与背景 */
.container {
  min-height: 100vh;
  position: relative;
  background-color: #f8fafc; /* Slate 50 */
  overflow: hidden;
  color: #0f172a; /* Slate 900 */
}

/* 液态流体背景 */
.liquid-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.blob {
  position: absolute;
  filter: blur(80px);
  opacity: 0.6;
  border-radius: 50%;
  animation: float 12s infinite ease-in-out;
  mix-blend-mode: multiply;
}

.blob-1 {
  width: 400rpx;
  height: 400rpx;
  background: #c7d2fe; /* Indigo 200 */
  top: -5%;
  right: -15%;
  animation-delay: 0s;
}

.blob-2 {
  width: 350rpx;
  height: 350rpx;
  background: #fbcfe8; /* Pink 200 */
  bottom: 20%;
  left: -10%;
  animation-delay: -3s;
}

.blob-3 {
  width: 280rpx;
  height: 280rpx;
  background: #bfdbfe; /* Blue 200 */
  top: 50%;
  right: 20%;
  animation-delay: -6s;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(20px, -30px) scale(1.05); }
  66% { transform: translate(-15px, 15px) scale(0.95); }
}

.noise-overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
  pointer-events: none;
}

/* 内容区域 */
.content-wrapper {
  position: relative;
  z-index: 10;
  height: 100vh;
  padding: 0 40rpx; /* 增加左右边距 */
  box-sizing: border-box;
}

/* 动画 */
.animate-fade-in {
  animation: fadeIn 0.6s ease-out forwards;
}

.animate-slide-up {
  animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  opacity: 0;
  animation-delay: 0.15s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(30rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 页面标题 */
.page-header {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.header-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 玻璃卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.7); /* White Glass */
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.05); /* Softer shadow */
  overflow: hidden;
}

.form-card {
  padding: 48rpx 40rpx;
  margin-bottom: 40rpx;
}

/* 表单组 */
.form-group {
  margin-bottom: 36rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155; /* Slate 700 */
}

/* ... */

.glass-input {
  width: 100%;
  height: 96rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(203, 213, 225, 0.6); /* Slate 300 */
  border-radius: 16rpx;
  color: #0f172a;
  font-size: 30rpx;
  transition: all 0.25s ease;
}

.glass-input:focus {
  background: #ffffff;
  border-color: #3b82f6;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.input-placeholder {
  color: #94a3b8; /* Slate 400 */
}

/* ... */

.glass-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx 28rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(203, 213, 225, 0.6);
  border-radius: 16rpx;
  color: #0f172a;
  font-size: 30rpx;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  margin-top: 48rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border-radius: 50rpx;
  border: none;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.4);
  position: relative;
  overflow: hidden;
}

.submit-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

.submit-btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn[disabled] {
  background: rgba(255, 255, 255, 0.1);
  box-shadow: none;
  color: rgba(255, 255, 255, 0.4);
}

.submit-btn[disabled]::after {
  display: none;
}

/* 返回链接 */
.back-link {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
}

.back-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.5);
}

.back-action {
  font-size: 26rpx;
  color: #60a5fa;
  margin-left: 8rpx;
  font-weight: 500;
}

/* 底部留白 */
.footer-space {
  height: 80rpx;
}
