/* pages/register/register.wxss */

.container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: var(--bg-page);
}

.content-wrapper {
    height: 100vh;
}

/* Tabs Header */
.tab-header {
    display: flex;
    justify-content: center;
    padding: 60rpx 0 40rpx;
    margin-bottom: 20rpx;
    gap: 60rpx;
}

.tab-item {
    padding: 16rpx 24rpx;
    font-size: 30rpx;
    color: var(--text-muted);
    position: relative;
    font-weight: 500;
    transition: all 0.3s;
    letter-spacing: 2rpx;
}

.tab-item.active {
    color: var(--brand-primary);
    font-weight: bold;
    font-size: 32rpx;
}

.active-indicator {
    position: absolute;
    bottom: -4rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 32rpx;
    height: 6rpx;
    border-radius: 4rpx;
    background: var(--brand-primary);
}

/* Page Header */
.page-header {
    text-align: center;
    margin-bottom: 40rpx;
}

.header-icon { 
    font-size: 80rpx;
    margin: 0 auto 16rpx;
    line-height: 1;
}

.header-desc { 
    color: var(--text-muted); 
    font-size: 26rpx; 
    letter-spacing: 2rpx; 
}

/* Form Card */
.form-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 48rpx 40rpx;
  margin: 0 40rpx 40rpx 40rpx;
  box-shadow: var(--shadow-sm);
}

/* Form Groups */
.form-group { margin-bottom: 32rpx; }

.form-label { 
    display: flex; 
    align-items: center; 
    margin-bottom: 12rpx; 
}

.label-text { 
    font-size: 28rpx; 
    font-weight: 600; 
    color: var(--text-heading); 
}

.required { 
    color: var(--color-error); 
    margin-left: 8rpx; 
    font-size: 28rpx;
    font-weight: bold;
}

/* Input Fields */
.input-wrapper {
    position: relative;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  background: var(--bg-section);
  border: 2rpx solid transparent;
  border-radius: var(--radius-md);
  color: var(--text-body);
  font-size: 28rpx;
  text-align: left;
  transition: all 0.2s;
}

.form-input:focus {
    border-color: var(--brand-primary);
    background: var(--bg-card);
    box-shadow: 0 0 0 4rpx var(--bg-primary-light);
}

.input-placeholder {
    color: var(--text-muted);
}

.picker-value {
    line-height: 88rpx;
}

.picker-arrow {
    position: absolute;
    right: 24rpx;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    font-size: 24rpx;
}

.invite-input {
    text-align: center;
    font-size: 40rpx;
    letter-spacing: 8rpx;
    font-family: 'DIN Alternate', monospace;
    color: var(--text-heading);
    font-weight: bold;
    height: 100rpx;
}

/* Buttons */
.submit-btn {
  width: 100%;
  height: 96rpx;
  margin-top: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 99rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-link {
    text-align: center;
    padding: 30rpx;
    margin-top: 20rpx;
}

.back-text { 
    color: var(--brand-primary); 
    font-size: 28rpx; 
    font-weight: 500;
}

.footer-space { height: 80rpx; }

/* Animations */
.animate-fade-in { animation: fadeIn 0.6s ease-out forwards; opacity: 0; }
.animate-slide-up { animation: slideUp 0.6s ease-out forwards; opacity: 0; }

@keyframes fadeIn {
    to { opacity: 1; }
}

@keyframes slideUp {
    from { opacity: 0; transform: translateY(40rpx); }
    to { opacity: 1; transform: translateY(0); }
}
