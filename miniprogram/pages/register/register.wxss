/* pages/register/register.wxss */

/* 容器使用全局背景，此处叠加页面特有装饰 */
.container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  /* 继承 app.wxss 的背景色，添加辐射线装饰 */
  background: 
    repeating-linear-gradient(
      90deg,
      rgba(212, 175, 55, 0.03) 0,
      rgba(212, 175, 55, 0.03) 1px,
      transparent 1px,
      transparent 40px
    ),
    var(--obsidian-black);
}

.content-wrapper {
    height: 100vh;
}

/* Tabs Header - 几何风格 */
.tab-header {
    display: flex;
    justify-content: center;
    padding: 60rpx 0 40rpx;
    margin-bottom: 20rpx;
    gap: 40rpx;
}

.tab-item {
    padding: 16rpx 32rpx;
    font-size: 30rpx;
    color: var(--text-muted);
    position: relative;
    font-weight: 500;
    transition: all 0.3s;
    letter-spacing: 2rpx;
    border: 1rpx solid transparent;
}

.tab-item.active {
    color: var(--gold-primary);
    font-weight: bold;
    font-size: 32rpx;
    border: 1rpx solid var(--gold-primary);
    background: rgba(212, 175, 55, 0.05);
}

/* 菱形指示器 */
.active-indicator {
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12rpx;
    height: 12rpx;
    background: var(--gold-primary);
}

/* Page Header */
.page-header {
    text-align: center;
    margin-bottom: 60rpx;
    position: relative;
}

/* 装饰分割线 */
.page-header::after {
    content: '';
    display: block;
    width: 120rpx;
    height: 2rpx;
    background: var(--gold-dark);
    margin: 24rpx auto 0;
}

.header-icon { 
    width: 80rpx; 
    height: 80rpx; 
    margin: 0 auto 20rpx;
    /* 金色滤镜 */
    filter: drop-shadow(0 0 0 var(--gold-primary)); 
}
.header-desc { color: var(--text-muted); font-size: 26rpx; letter-spacing: 4rpx; text-transform: uppercase; }

/* 装饰艺术卡片 - 复用全局 deco-card 逻辑但微调 */
.glass-card, .form-card {
  background: rgba(18, 18, 18, 0.9);
  border: 1rpx solid var(--gold-dark);
  border-radius: 4rpx; /* 硬朗直角 */
  padding: 60rpx 40rpx;
  margin: 0 40rpx 40rpx 40rpx;
  box-shadow: 
    0 20rpx 50rpx rgba(0, 0, 0, 0.5),
    inset 0 0 0 2rpx rgba(212, 175, 55, 0.1); 
  position: relative;
}

/* 角落装饰 */
.form-card::before {
    content: '';
    position: absolute;
    top: 10rpx; left: 10rpx; right: 10rpx; bottom: 10rpx;
    border: 1rpx solid rgba(212, 175, 55, 0.2);
    pointer-events: none;
}

/* Form Groups */
.form-group { margin-bottom: 40rpx; }
.form-label { display: flex; align-items: center; margin-bottom: 12rpx; }
.label-text { font-size: 26rpx; font-weight: 400; color: var(--gold-light); letter-spacing: 2rpx; }
.required { color: var(--status-danger); margin-left: 8rpx; }

/* 底部下划线输入框风格 */
.input-wrapper {
    position: relative;
    border-bottom: 1rpx solid var(--text-muted);
    transition: all 0.3s;
}

.input-wrapper:focus-within {
    border-bottom-color: var(--gold-primary);
    box-shadow: 0 4rpx 0 -2rpx var(--gold-primary);
}

.glass-input {
  width: 100%;
  height: 80rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  background: transparent;
  border: none;
  border-radius: 0;
  color: var(--text-main);
  font-size: 32rpx;
  text-align: left;
}

.glass-input:focus {
    background: transparent;
    box-shadow: none;
}

.input-placeholder {
    color: #4B5563;
    font-size: 28rpx;
    letter-spacing: 1rpx;
}

.picker-value {
    line-height: 80rpx;
    padding-left: 16rpx;
}
.picker-arrow {
    right: 0;
    color: var(--gold-dark);
}

.invite-input {
    text-align: center;
    font-size: 48rpx;
    letter-spacing: 16rpx;
    font-family: monospace;
    color: var(--gold-primary);
    border-bottom: none; 
}
/* 邀请码单独样式 - 方框 */
.invite-input-container .input-wrapper {
    border: 1rpx solid var(--gold-dark);
    padding: 10rpx;
}

/* 按钮调整 */
.submit-btn, .join-btn {
  /* 复用 btn-primary */
  border-radius: 4rpx;
  height: 100rpx;
  margin-top: 60rpx;
  font-size: 32rpx;
  letter-spacing: 4rpx;
}

.back-link {
    text-align: center;
    padding: 30rpx;
    margin-top: 20rpx;
    border-top: 1rpx solid rgba(255,255,255,0.05);
}
.back-text { 
    color: var(--text-muted); 
    font-size: 24rpx; 
    letter-spacing: 2rpx;
    text-decoration: underline; 
}

.footer-space { height: 80rpx; }

/* Animations - 保持原有 */
.animate-fade-in { animation: fadeIn 0.8s ease-out forwards; }
.animate-slide-up { animation: slideUp 0.8s ease-out forwards; }
