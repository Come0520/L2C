/* 报表页 - 简洁数据看板 */
.reports-page {
  padding-top: 32rpx;
  padding-bottom: 60rpx;
}

/* 页面标题 */
.page-title {
  margin-bottom: 32rpx;
}

.title-text {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-heading);
  margin-bottom: 8rpx;
}

.title-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-muted);
}

/* 时间选择器 */
.time-tabs {
  display: flex;
  background: var(--bg-card);
  border: 1rpx solid var(--border-main);
  border-radius: var(--radius-lg);
  padding: 6rpx;
  margin-bottom: 32rpx;
}

.time-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: var(--text-body);
  border-radius: var(--radius-md);
  transition: all 0.2s ease;
  font-weight: 500;
}

.time-tab.active {
  background: var(--brand-primary);
  color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(37, 99, 235, 0.2);
}

/* 核心数据卡片 */
.main-stat-card {
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-indigo));
  color: #FFFFFF;
  border: none;
  padding: 40rpx;
}

.main-stat-label {
  font-size: 26rpx;
  opacity: 0.85;
  margin-bottom: 12rpx;
}

.main-stat-value {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.main-stat-trend {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255,255,255,0.2);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-full);
  font-size: 22rpx;
}

.trend-desc {
  opacity: 0.8;
}

/* 辅助数据 */
.sub-stats {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.sub-stat-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx;
  gap: 8rpx;
}

.sub-stat-label {
  font-size: 24rpx;
  color: var(--text-muted);
}

.sub-stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-heading);
}

/* 数据表格 */
.data-table {
  padding: 0;
  overflow: hidden;
}

.table-header {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: var(--bg-section);
  font-size: 24rpx;
  color: var(--text-muted);
  font-weight: 500;
}

.table-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.table-row:last-child {
  border-bottom: none;
}

.row-label {
  font-size: 28rpx;
  color: var(--text-heading);
  flex-shrink: 0;
  margin-right: 24rpx;
}

.row-value {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  justify-content: flex-end;
}

.row-num {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-heading);
  flex-shrink: 0;
}

.progress-bg {
  width: 120rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: var(--border-main);
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  background: var(--brand-primary);
  transition: width 0.3s ease;
}
