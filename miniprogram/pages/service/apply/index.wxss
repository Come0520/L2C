/* pages/service/apply/index.wxss */
.container {
    padding: 24rpx;
    padding-bottom: 120rpx;
    background: #f8fafc;
    min-height: 100vh;
}

.form-group {
    background: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
}

.form-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
}
.label { color: #334155; font-weight: 500; }
.value { color: #0f172a; font-weight: 500; }
.placeholder { color: #94a3b8; }

.group-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #334155;
    margin-bottom: 20rpx;
}

.type-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
}
.type-item {
    font-size: 24rpx;
    text-align: center;
    padding: 16rpx 0;
    border-radius: 8rpx;
    background: #f1f5f9;
    color: #64748b;
    border: 1rpx solid transparent;
}
.type-item.active {
    background: #eff6ff;
    color: #2563eb;
    border-color: #bfdbfe;
    font-weight: 500;
}

.desc-input {
    width: 100%;
    height: 200rpx;
    font-size: 28rpx;
    color: #334155;
    line-height: 1.5;
}
.word-count {
    text-align: right;
    font-size: 24rpx;
    color: #cbd5e1;
    margin-top: 8rpx;
}

.photo-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
}
.photo-item, .photo-add {
    width: 150rpx;
    height: 150rpx;
    border-radius: 8rpx;
    position: relative;
}
.photo-item image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}
.delete-btn {
    position: absolute;
    top: -10rpx; right: -10rpx;
    width: 36rpx; height: 36rpx;
    background: rgba(0,0,0,0.5);
    color: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 34rpx;
    font-size: 24rpx;
}
.photo-add {
    background: #f1f5f9;
    display: flex;
    align-items: center;
    justify-content: center;
}
.add-icon {
    font-size: 60rpx;
    color: #cbd5e1;
    font-weight: 300;
    margin-top: -10rpx;
}

.footer {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    padding: 24rpx;
    background: #fff;
    box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}
.submit-btn {
    background: #0f172a;
    color: #fff;
    border-radius: 12rpx;
}
