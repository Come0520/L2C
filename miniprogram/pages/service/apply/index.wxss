/* pages/service/apply/index.wxss */
.container {
    min-height: 100vh;
    background-color: var(--bg-page);
    padding: 24rpx;
}

.form-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: var(--shadow-sm);
}

.form-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.label-wrapper {
    display: flex;
    align-items: center;
}

.required-star {
    color: var(--color-error);
    margin-right: 8rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.label { 
    color: var(--text-heading); 
    font-weight: 600; 
    font-size: 30rpx;
}

.value-wrapper {
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: flex-end;
}

.value { 
    color: var(--text-body); 
    font-size: 28rpx;
    text-align: right;
}

.placeholder { 
    color: var(--text-muted); 
    font-size: 28rpx;
}

.arrow {
    color: var(--text-muted);
    font-family: monospace;
    margin-left: 12rpx;
    font-size: 28rpx;
}

.group-header {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
}

.group-title {
    font-size: 30rpx;
    font-weight: 600;
    color: var(--text-heading);
}

.subtitle {
    color: var(--text-muted);
    font-size: 24rpx;
    font-weight: normal;
    margin-left: 8rpx;
}

/* Type Grid */
.type-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
}

.type-item {
    font-size: 26rpx;
    text-align: center;
    padding: 20rpx 0;
    border-radius: var(--radius-md);
    background: var(--bg-section);
    color: var(--text-body);
    border: 2rpx solid transparent;
    transition: all 0.2s;
}

.type-item.active {
    background: var(--bg-primary-light);
    color: var(--brand-primary);
    border-color: var(--brand-primary);
    font-weight: 600;
}

/* Textarea */
.textarea-wrapper {
    background: var(--bg-section);
    border-radius: var(--radius-md);
    padding: 24rpx;
    position: relative;
    border: 2rpx solid transparent;
    transition: border-color 0.2s;
}

.textarea-wrapper:focus-within {
    border-color: var(--brand-primary);
    background: var(--bg-card);
}

.desc-input {
    width: 100%;
    height: 240rpx;
    font-size: 28rpx;
    color: var(--text-body);
    line-height: 1.6;
}

.textarea-placeholder {
    color: var(--text-muted);
}

.word-count {
    position: absolute;
    bottom: 24rpx;
    right: 24rpx;
    font-size: 24rpx;
    color: var(--text-muted);
    font-family: 'DIN Alternate', monospace;
}

/* Photo Grid */
.photo-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
    margin-top: 16rpx;
}

.photo-item, .photo-add {
    aspect-ratio: 1;
    border-radius: var(--radius-sm);
    position: relative;
    overflow: hidden;
}

.photo-item image {
    width: 100%;
    height: 100%;
    display: block;
}

.delete-btn {
    position: absolute;
    top: 8rpx; 
    right: 8rpx;
    width: 36rpx; 
    height: 36rpx;
    background: rgba(0,0,0,0.6);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    backdrop-filter: blur(4px);
}

.photo-add {
    background: var(--bg-section);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2rpx dashed var(--border-light);
}

.photo-add:active {
    background: var(--bg-page);
}

.icon-camera {
    width: 48rpx;
    height: 40rpx;
    border: 4rpx solid var(--text-muted);
    border-radius: 8rpx;
    position: relative;
    margin-bottom: 8rpx;
}

.icon-camera::after {
    content: '';
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 16rpx;
    height: 16rpx;
    border: 4rpx solid var(--text-muted);
    border-radius: 50%;
}

.add-text {
    font-size: 22rpx;
    color: var(--text-muted);
}

.safe-bottom-space {
    height: 160rpx;
}

/* Footer Action Bar */
.footer-bar {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    padding: 24rpx 32rpx;
    background: var(--bg-card);
    box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.05);
    z-index: 100;
}

.submit-btn {
    width: 100%;
    height: 88rpx;
    background: var(--brand-primary);
    color: #fff;
    border-radius: 99rpx;
    font-size: 32rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
}

.submit-btn:active {
    background: var(--brand-hover);
    transform: scale(0.98);
}

.submit-btn.disabled {
    background: var(--bg-section);
    color: var(--text-muted);
}
