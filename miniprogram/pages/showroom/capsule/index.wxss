/* pages/showroom/capsule/index.wxss */
.container {
  min-height: 100vh;
  background-color: #000;
  color: #fff;
  padding-bottom: 200rpx; /* Space for CTA */
}

/* Hero */
.hero {
  height: 60vh;
  background-image: 
    linear-gradient(to bottom, rgba(0,0,0,0.2), #000 100%),
    url('https://picsum.photos/800/1200'); /* Placeholder or passed bg */
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: flex-end;
  padding: 60rpx;
}

.hero-content {
  animation: fadeIn 1s ease-out;
}

.hero-subtitle {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  color: #d4af37;
  text-transform: uppercase;
  margin-bottom: 16rpx;
}

.hero-title {
  font-size: 64rpx;
  font-weight: 200; /* Thin elegance */
  margin-bottom: 32rpx;
  line-height: 1.2;
}

.hero-curator {
  display: flex;
  align-items: center;
}

.curator-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #d4af37;
  overflow: hidden;
  margin-right: 16rpx;
}

.curator-avatar image {
  width: 100%;
  height: 100%;
}

.curator-text {
  font-size: 24rpx;
  color: #cbd5e1;
}

/* Gallery */
.gallery {
  padding: 40rpx;
}

.gallery-item {
  margin-bottom: 80rpx;
}

.gallery-img {
  width: 100%;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.5);
  margin-bottom: 32rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #e2e8f0;
}

.item-desc {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.6;
}

/* CTA */
.footer-cta {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(to top, #000 80%, transparent 100%);
  display: flex;
  justify-content: center;
}

.contact-btn {
  background: #d4af37;
  color: #000;
  font-weight: 700;
  border-radius: 99rpx;
  padding: 24rpx 80rpx;
  font-size: 30rpx;
  box-shadow: 0 0 20rpx rgba(212, 175, 55, 0.4);
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-slide-up {
  opacity: 0;
  animation: slideUp 0.8s ease-out forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
