/* pages/showroom/capsule/index.wxss */
.container {
  min-height: 100vh;
  background-color: var(--bg-page);
  color: var(--text-body);
}

/* Hero */
.hero {
  height: 50vh;
  background-image: 
    linear-gradient(to bottom, rgba(255,255,255,0.2), var(--bg-page) 100%),
    url('https://picsum.photos/800/1200'); /* Placeholder or passed bg */
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: flex-end;
  padding: 60rpx 40rpx;
  position: relative;
}

.hero::after {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(to bottom, transparent 30%, var(--bg-page) 100%);
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  width: 100%;
  animation: fadeIn 1s ease-out;
}

.hero-subtitle {
  font-size: 24rpx;
  letter-spacing: 4rpx;
  color: var(--brand-primary);
  text-transform: uppercase;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.hero-title {
  font-size: 64rpx;
  font-weight: 800;
  margin-bottom: 32rpx;
  line-height: 1.2;
  color: var(--text-heading);
}

.hero-curator {
  display: flex;
  align-items: center;
  background: var(--bg-card);
  padding: 16rpx 24rpx;
  border-radius: 99rpx;
  display: inline-flex;
  box-shadow: var(--shadow-sm);
}

.curator-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  background: var(--bg-section);
}

.curator-avatar image {
  width: 100%;
  height: 100%;
}

.curator-text {
  font-size: 26rpx;
  color: var(--text-muted);
}

.curator-text .highlight {
  color: var(--text-heading);
  font-weight: bold;
}

/* Gallery */
.gallery {
  padding: 40rpx;
  position: relative;
  z-index: 2;
}

.gallery-item {
  margin-bottom: 64rpx;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
}

.gallery-img {
  width: 100%;
  display: block;
}

.gallery-info {
  padding: 32rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: var(--text-heading);
}

.item-desc {
  font-size: 28rpx;
  color: var(--text-body);
  line-height: 1.6;
}

.footer-spacer {
  height: 200rpx;
}

/* CTA */
.footer-cta {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 40rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
  display: flex;
  justify-content: center;
  z-index: 100;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.contact-btn {
  width: 100%;
  margin: 0;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-slide-up {
  opacity: 0;
  animation: slideUp 0.6s ease-out forwards;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
