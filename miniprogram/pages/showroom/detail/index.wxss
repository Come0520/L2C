/* pages/showroom/detail/index.wxss */

.container {
  min-height: 100vh;
  background-color: var(--bg-page);
  color: var(--text-body);
  padding-bottom: 200rpx; /* Space for footer */
}

/* Hero Image */
.gallery-section {
  height: 50vh;
  width: 100%;
  position: relative;
}

.hero-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0; left: 0;
}

.gallery-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(to bottom, 
    rgba(0,0,0,0.2) 0%, 
    transparent 40%, 
    transparent 80%, 
    rgba(0,0,0,0.1) 100%
  );
}

/* Info Card - Overlapping Hero Image */
.info-card {
  position: relative;
  margin: -80rpx 32rpx 0;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 40rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  z-index: 20;
}

.title {
    font-size: 40rpx;
    font-weight: 900;
    color: var(--text-heading);
    margin-bottom: 8rpx;
}

.subtitle {
    font-size: 24rpx;
    color: var(--text-muted);
    letter-spacing: 2rpx;
    text-transform: uppercase;
}

.divider {
    height: 1rpx;
    background: var(--border-light);
    margin: 32rpx 0;
}

.specs {
    margin-bottom: 32rpx;
}

.spec-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16rpx;
    font-size: 26rpx;
}

.label { color: var(--text-muted); font-size: 22rpx; }
.value { color: var(--text-heading); font-weight: 500; }

.price-box {
    text-align: right;
    margin-top: 20rpx;
}

.currency { font-size: 32rpx; color: var(--brand-primary); margin-right: 4rpx; font-weight: bold; }
.amount { 
    font-size: 64rpx; 
    font-weight: 700; 
    color: var(--brand-primary); 
    font-family: 'DIN Alternate', sans-serif;
}
.unit { font-size: 24rpx; color: var(--text-muted); margin-left: 8rpx; }

/* Content Section */
.detail-content {
    padding: 40rpx 32rpx;
}

.section-title {
    display: flex;
    align-items: center;
    margin-bottom: 32rpx;
    position: relative;
    padding-left: 16rpx;
}

.section-title text {
    color: var(--text-heading);
    font-size: 32rpx;
    font-weight: bold;
}

.section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 32rpx;
    background: var(--brand-primary);
    border-radius: 4rpx;
}

.desc-text {
    font-size: 28rpx;
    line-height: 1.8;
    color: var(--text-body);
    margin-bottom: 40rpx;
    text-align: justify;
}

.image-frame {
    margin-bottom: 24rpx;
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--bg-section);
}

.detail-img {
    width: 100%;
    display: block;
}

/* Action Bar */
.action-bar {
    position: fixed;
    bottom: 0; left: 0; right: 0;
    background: var(--bg-card);
    border-top: 1rpx solid var(--border-light);
    padding: 24rpx 32rpx;
    padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
    display: flex;
    gap: 24rpx;
    z-index: 100;
    box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
    background: transparent;
    border: none;
    padding: 0;
    line-height: 1.4;
    color: var(--text-muted);
}

.action-btn::after { border: none; }

.btn-icon {
    font-size: 40rpx;
    margin-bottom: 4rpx;
}

.action-btn.share, .action-btn.contact {
    width: 96rpx;
}

.action-btn-primary {
    flex: 1;
    background: var(--brand-primary);
    color: #fff;
    border-radius: 99rpx;
    font-size: 30rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 88rpx;
}
.action-btn-primary:active {
    background: var(--brand-hover);
}

/* Animations */
.animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(40rpx);
}

@keyframes slideUp { to { opacity: 1; transform: translateY(0); } }
