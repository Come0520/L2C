/* pages/showroom/index.wxss */
.container {
  background-color: #0f0f0f;
  min-height: 100vh;
  color: #e2e8f0;
}

/* Search Header */
.search-header {
  padding: 24rpx 32rpx;
  background: #1a1a1a;
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(255,255,255,0.05);
  display: flex;
  align-items: center;
}

.search-bar {
  background: #262626;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border: 1rpx solid #333;
  flex: 1;
}

.select-btn {
  font-size: 28rpx;
  color: #d4af37;
  padding: 16rpx 24rpx;
  margin-left: 16rpx;
  font-weight: 700;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #cbd5e1;
}

.search-placeholder {
  color: #64748b;
}

/* Tabs */
.tabs {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 24rpx;
  background: #0f0f0f;
  transition: all 0.3s ease;
}

.tab-item {
  padding: 12rpx 32rpx;
  border-radius: 99rpx;
  font-size: 28rpx;
  color: #94a3b8;
  background: rgba(255,255,255,0.05);
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #d4af37, #fceabb);
  color: #1a1a1a;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

/* Grid Layout */
.content-scroll {
  height: calc(100vh - 120rpx); /* Adjust for header */
}

.masonry-grid {
  padding: 24rpx 32rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2 Columns */
  gap: 24rpx;
}

.resource-card {
  background: #1a1a1a;
  border-radius: 24rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255,255,255,0.1);
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.3);
  margin-bottom: 24rpx; /* Fallback for masonry flow */
  break-inside: avoid;
  position: relative;
  transition: all 0.2s;
}

.resource-card.selected {
  border: 2rpx solid #d4af37;
  transform: scale(0.98);
  background: #2d2d2d;
}

/* Checkbox Overlay */
.checkbox-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  background: rgba(0,0,0,0.5);
}

.checkbox.checked {
  background: #d4af37;
  border-color: #d4af37;
  box-shadow: 0 0 10rpx rgba(212, 175, 55, 0.5);
  position: relative;
}

.checkbox.checked::after {
  content: 'âœ“';
  position: absolute;
  color: #000;
  font-size: 24rpx;
  font-weight: 800;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.resource-img {
  width: 100%;
  display: block;
}

.card-body {
  padding: 20rpx;
}

.resource-title {
  font-size: 28rpx;
  color: #e2e8f0;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.resource-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.price {
  background: rgba(212, 175, 55, 0.1);
  color: #d4af37;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

.views {
  font-size: 22rpx;
  color: #64748b;
}

/* Empty State */
.empty-state {
  text-align: center;
  color: #64748b;
  padding: 100rpx 0;
  font-size: 28rpx;
}

/* Share Bar */
.share-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #1a1a1a;
  border-top: 1rpx solid rgba(255,255,255,0.1);
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 200;
  box-shadow: 0 -8rpx 20rpx rgba(0,0,0,0.5);
}

.selected-count {
  color: #e2e8f0;
  font-size: 28rpx;
}

.share-btn {
  background: linear-gradient(135deg, #d4af37, #fceabb);
  color: #1a1a1a;
  font-weight: 700;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 99rpx;
  line-height: 1;
  margin: 0;
}

.share-btn[disabled] {
  background: #404040;
  color: #737373;
}

/* Filter Button */
.filter-btn {
  margin-left: 16rpx;
  padding: 10rpx;
}

.filter-icon {
  font-size: 36rpx;
}

/* Filter Drawer */
.filter-drawer {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 500;
  visibility: hidden;
  transition: visibility 0.3s;
}

.filter-drawer.open {
  visibility: visible;
}

.drawer-mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  opacity: 0;
  transition: opacity 0.3s;
}

.filter-drawer.open .drawer-mask {
  opacity: 1;
}

.drawer-content {
  position: absolute;
  top: 0; right: 0; bottom: 0;
  width: 600rpx;
  background: #1e1e1e;
  transform: translateX(100%);
  transition: transform 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  display: flex;
  flex-direction: column;
  box-shadow: -8rpx 0 24rpx rgba(0,0,0,0.5);
  border-left: 1rpx solid #333;
}

.filter-drawer.open .drawer-content {
  transform: translateX(0);
}

.drawer-header {
  padding: 40rpx 32rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #d4af37;
  border-bottom: 1rpx solid #333;
}

.drawer-body {
  flex: 1;
  padding: 32rpx;
}

.filter-section {
  margin-bottom: 48rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #e2e8f0;
  margin-bottom: 24rpx;
  font-weight: 600;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-tag {
  padding: 12rpx 24rpx;
  background: #2d2d2d;
  color: #94a3b8;
  border-radius: 8rpx;
  font-size: 24rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.option-tag.active {
  background: rgba(212, 175, 55, 0.1);
  color: #d4af37;
  border-color: #d4af37;
}

.drawer-footer {
  padding: 32rpx;
  border-top: 1rpx solid #333;
  display: flex;
  gap: 24rpx;
}

.reset-btn {
  flex: 1;
  background: #2d2d2d;
  color: #94a3b8;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  border: none;
}

.confirm-btn {
  flex: 1;
  background: linear-gradient(135deg, #d4af37, #fceabb);
  color: #1a1a1a;
  font-weight: 700;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  border: none;
}
