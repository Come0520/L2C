/* pages/showroom/index.wxss */
.container {
  background-color: var(--bg-page);
  min-height: 100vh;
  color: var(--text-body);
}

/* Search Header */
.search-header {
  padding: 24rpx 32rpx;
  background: var(--bg-card);
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-sm);
}

.search-bar {
  background: var(--bg-section);
  height: 72rpx;
  border-radius: 99rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  flex: 1;
}

.select-btn {
  font-size: 28rpx;
  color: var(--brand-primary);
  padding: 16rpx 24rpx;
  margin-left: 16rpx;
  font-weight: bold;
}

.search-input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  color: var(--text-body);
}

.search-placeholder {
  color: var(--text-placeholder);
}

/* Tabs */
.tabs {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 24rpx;
  background: var(--bg-card);
  transition: all 0.3s ease;
}

.tab-item {
  padding: 12rpx 32rpx;
  border-radius: 99rpx;
  font-size: 28rpx;
  color: var(--text-muted);
  background: var(--bg-section);
  transition: all 0.3s;
}

.tab-item.active {
  background: var(--brand-light);
  color: var(--brand-primary);
  font-weight: bold;
}

/* Grid Layout */
.content-scroll {
  height: calc(100vh - 180rpx); /* Adjust for header */
}

.masonry-grid {
  padding: 24rpx 32rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2 Columns */
  gap: 24rpx;
}

.resource-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  margin-bottom: 24rpx; /* Fallback for masonry flow */
  break-inside: avoid;
  position: relative;
  transition: transform 0.2s, box-shadow 0.2s;
}

.resource-card.selected {
  border: 4rpx solid var(--brand-primary);
  transform: scale(0.98);
}

/* Checkbox Overlay */
.checkbox-overlay {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background: var(--brand-primary);
  border-color: var(--brand-primary);
}

.checkbox.checked::after {
  content: '';
  width: 12rpx;
  height: 20rpx;
  border-right: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  transform: rotate(45deg);
  margin-bottom: 4rpx;
}

.resource-img {
  width: 100%;
  display: block;
  background: var(--bg-section);
}

.card-body {
  padding: 20rpx;
}

.resource-title {
  font-size: 28rpx;
  color: var(--text-heading);
  font-weight: 600;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.resource-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
  background: var(--bg-section);
  color: var(--text-muted);
}

.type-tag {
  color: var(--brand-primary);
  background: var(--brand-light);
}

.price {
  background: #fef2f2;
  color: var(--status-danger);
  font-family: 'DIN Alternate', sans-serif;
  font-weight: bold;
}

.views {
  font-size: 22rpx;
  color: var(--text-muted);
  width: 100%;
  margin-top: 4rpx;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}
.empty-text {
  color: var(--text-placeholder);
  font-size: 28rpx;
}

/* Share Bar */
.share-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-card);
  border-top: 1rpx solid var(--border-light);
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 200;
  box-shadow: 0 -8rpx 20rpx rgba(0,0,0,0.05);
}

.selected-count {
  color: var(--text-heading);
  font-size: 30rpx;
  font-weight: bold;
}

.share-btn {
  margin: 0;
  width: auto;
  min-width: 240rpx;
}

.share-btn[disabled] {
  background: var(--text-placeholder) !important;
  color: #fff !important;
}

/* Filter Button */
.filter-btn {
  margin-left: 16rpx;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Filter Drawer */
.filter-drawer {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 500;
  visibility: hidden;
  transition: visibility 0.3s;
}

.filter-drawer.open {
  visibility: visible;
}

.drawer-mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  opacity: 0;
  transition: opacity 0.3s;
}

.filter-drawer.open .drawer-mask {
  opacity: 1;
}

.drawer-content {
  position: absolute;
  top: 0; right: 0; bottom: 0;
  width: 600rpx;
  background: var(--bg-card);
  transform: translateX(100%);
  transition: transform 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  display: flex;
  flex-direction: column;
  box-shadow: -8rpx 0 24rpx rgba(0,0,0,0.05);
}

.filter-drawer.open .drawer-content {
  transform: translateX(0);
}

.drawer-header {
  padding: 40rpx 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-heading);
  border-bottom: 1rpx solid var(--border-light);
}

.drawer-body {
  flex: 1;
  padding: 32rpx;
}

.filter-section {
  margin-bottom: 48rpx;
}

.filter-label {
  font-size: 28rpx;
  color: var(--text-heading);
  margin-bottom: 24rpx;
  font-weight: 600;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-tag {
  padding: 12rpx 32rpx;
  background: var(--bg-section);
  color: var(--text-body);
  border-radius: 99rpx;
  font-size: 26rpx;
  transition: all 0.2s;
  border: 1rpx solid transparent;
}

.option-tag.active {
  background: var(--brand-light);
  color: var(--brand-primary);
  border-color: var(--brand-primary);
  font-weight: bold;
}

.drawer-footer {
  padding: 32rpx;
  border-top: 1rpx solid var(--border-light);
  display: flex;
  gap: 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.reset-btn {
  flex: 1;
  margin: 0;
}

.confirm-btn {
  flex: 1;
  margin: 0;
}
