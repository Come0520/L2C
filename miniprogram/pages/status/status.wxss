/* pages/status/status.wxss */

/* 容器与背景 */
.container {
  min-height: 100vh;
  position: relative;
  background-color: #fdfbf7;
  overflow: hidden;
  color: #475569;
}

/* ... */

/* 黏土卡片 */
.glass-card, .status-card, .info-card, .subscribe-card {
  background: #ffffff;
  border-radius: 48rpx;
  box-shadow: 
    16rpx 16rpx 32rpx rgba(244, 63, 94, 0.08),
    -16rpx -16rpx 32rpx rgba(255, 255, 255, 0.8);
  border: none;
  backdrop-filter: none;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  overflow: visible;
}

/* 状态卡片内容 */
.status-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  background: #ffffff;
  box-shadow: 
    12rpx 12rpx 24rpx rgba(244, 63, 94, 0.1),
    -12rpx -12rpx 24rpx rgba(255, 255, 255, 0.8);
}

.status-icon-box.orange { color: #f59e0b; }
.status-icon-box.green { color: #10b981; }
.status-icon-box.red { color: #f87171; }
.status-icon-box.blue { color: #f43f5e; /* Rose now */ }
.status-icon {
  width: 80rpx;
  height: 80rpx;
}

/* ... */

/* 按钮 */
.primary-btn {
  width: 100%;
  height: 104rpx;
  background: linear-gradient(135deg, #f43f5e, #f97316);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 48rpx;
  box-shadow: 
    8rpx 8rpx 16rpx rgba(244, 63, 94, 0.25),
    -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.5);
}

.btn-hover { transform: scale(0.97); }

.outline-btn {
  width: 100%;
  height: 104rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f43f5e; /* Rose */
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
  /* 浅色凸起 */
  box-shadow: 
    6rpx 6rpx 12rpx rgba(244, 63, 94, 0.08),
    -6rpx -6rpx 12rpx rgba(255, 255, 255, 0.8);
}

/* ... */

.info-value.code {
  background: #ffe4e6;
  color: #f43f5e; /* Rose 500 */
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
  font-family: monospace;
}

/* 订阅卡片 */
.subscribe-card {display: flex;align-items: center;justify-content: space-between;padding: 40rpx;}

.subscribe-icon-box {
  width: 96rpx;
  height: 96rpx;
  background: #fff1f2;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f43f5e;
  font-size: 48rpx;
  margin-right: 24rpx;
  box-shadow: inset 2rpx 2rpx 6rpx rgba(244, 63, 94, 0.1); /* 凹陷 */
}

.subscribe-title { font-size: 30rpx; font-weight: 700; color: #334155; }
.subscribe-desc { font-size: 24rpx; color: #94a3b8; }

.small-btn {
  font-size: 24rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  box-shadow: 4rpx 4rpx 8rpx rgba(0,0,0,0.05);
}
