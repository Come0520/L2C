/* pages/status/status.wxss */

.status-card {
  text-align: center;
  padding: 60rpx 32rpx;
}

.status-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.status-icon.pending {
  animation: pulse 2s infinite;
}

.status-icon.success {
  color: var(--success-color);
}

.status-icon.error {
  color: var(--danger-color);
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.status-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.status-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  max-width: 500rpx;
}

.status-desc .highlight {
  color: var(--primary-color);
  font-weight: 500;
}

.status-time {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 24rpx;
}

/* 企业信息 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.info-list {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 8rpx 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: var(--text-secondary);
  font-size: 28rpx;
}

.info-value {
  color: var(--text-primary);
  font-size: 28rpx;
  font-weight: 500;
}

/* 订阅卡片 */
.subscribe-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.subscribe-content {
  display: flex;
  align-items: center;
}

.subscribe-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.subscribe-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.subscribe-desc {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-top: 4rpx;
}
