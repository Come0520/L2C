/* pages/tasks/detail/detail.wxss */
.container {
  padding: 24rpx;
  background-color: var(--bg-page);
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.header-card {
  position: relative;
  overflow: hidden;
}

.header-card::before {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, var(--brand-primary), #8b5cf6);
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-no {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-heading);
  font-family: 'DIN Alternate', sans-serif;
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-sm);
  background: var(--bg-section);
  color: var(--text-muted);
}

.status-PENDING_VISIT, .status-PENDING {
  background: var(--brand-light);
  color: var(--brand-primary);
}

.status-COMPLETED {
  background: rgba(16, 185, 129, 0.1);
  color: var(--status-success);
}

.status-REJECTED, .status-CANCELLED {
  background: rgba(239, 68, 68, 0.1);
  color: var(--status-danger);
}

.time-row {
  display: flex;
  align-items: center;
  color: var(--text-muted);
  font-size: 28rpx;
  gap: 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-heading);
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: var(--brand-primary);
  border-radius: 4rpx;
}

.address-box {
  background: var(--bg-section);
  padding: 24rpx;
  border-radius: var(--radius-md);
}

.address-text {
  font-size: 30rpx;
  color: var(--text-heading);
  margin-bottom: 16rpx;
  line-height: 1.5;
  font-weight: 500;
}

.contact-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx dashed var(--border-light);
  padding-top: 16rpx;
}

.contact-info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: var(--text-heading);
  margin-bottom: 8rpx;
}

.phone {
  font-size: 28rpx;
  color: var(--brand-primary);
  font-weight: bold;
}

.action-bar {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 96rpx;
  height: 96rpx;
  background: var(--bg-card);
  border-radius: var(--radius-md);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  font-size: 22rpx;
  color: var(--text-body);
}

.action-btn-hover {
  background: var(--bg-section);
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.remark-content {
  padding: 24rpx;
  background: var(--bg-section);
  border-radius: var(--radius-md);
  color: var(--text-body);
  font-size: 28rpx;
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-card);
  padding: 24rpx 32rpx;
  display: flex;
  gap: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.btn-flex {
  flex: 1;
  margin: 0;
}

.btn-retry {
  margin-top: 32rpx;
  width: 240rpx;
}
