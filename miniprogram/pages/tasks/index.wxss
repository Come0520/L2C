/* 任务列表页样式 */
.container {
  height: 100vh;
  background: #141414;
  display: flex;
  flex-direction: column;
}

/* Tab 栏 */
.tabs {
  display: flex;
  background: #1E1E1E;
  padding: 0 32rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #E6B450;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #E6B450;
  border-radius: 2rpx;
}

/* 任务列表 */
.task-list {
  flex: 1;
  padding: 24rpx 32rpx;
}

.loading, .empty {
  text-align: center;
  padding: 120rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 任务卡片 */
.task-card {
  background: #1E1E1E;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.task-no {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFF;
}

.task-status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  background: rgba(230, 180, 80, 0.15);
  color: #E6B450;
}

.task-status.PENDING_VISIT {
  background: rgba(52, 168, 83, 0.15);
  color: #34A853;
}

.task-status.COMPLETED {
  background: rgba(153, 153, 153, 0.15);
  color: #999;
}

.task-status.REJECTED {
  background: rgba(234, 67, 53, 0.15);
  color: #EA4335;
}

/* 任务信息 */
.task-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #CCC;
}

.info-row .label {
  color: #999;
  width: 100rpx;
}

.info-row .value {
  flex: 1;
  color: #FFF;
}

/* 底部信息 */
.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
}

.tags {
  display: flex;
  gap: 16rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.05);
  color: #999;
}

.tag.type-QUOTE_BASED {
  background: rgba(66, 133, 244, 0.15);
  color: #4285F4;
}

.tag.type-BLIND {
  background: rgba(251, 188, 5, 0.15);
  color: #FBBC05;
}

.labor-fee {
  display: flex;
  align-items: baseline;
}

.fee-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.fee-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #E6B450;
}
