/* pages/tasks/index.wxss */
.container {
  height: 100vh;
  background: var(--bg-page);
  display: flex;
  flex-direction: column;
}

/* Tabs */
.tabs {
  display: flex;
  background: var(--bg-card);
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
  box-shadow: var(--shadow-sm);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: var(--text-muted);
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--brand-primary);
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: var(--brand-primary);
  border-radius: 6rpx 6rpx 0 0;
}

/* List */
.task-list {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

.task-card {
  margin-bottom: 24rpx;
  padding: 0;
}

.card-header {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid var(--border-light);
}

.task-no {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-heading);
}

.status-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: var(--radius-sm);
  background: var(--bg-section);
  color: var(--text-muted);
}

.status-PENDING_VISIT, .status-PENDING {
  background: var(--brand-light);
  color: var(--brand-primary);
}

.status-COMPLETED {
  background: rgba(16, 185, 129, 0.1);
  color: var(--status-success);
}

.status-REJECTED, .status-CANCELLED {
  background: rgba(239, 68, 68, 0.1);
  color: var(--status-danger);
}

.card-body {
  padding: 24rpx 32rpx;
}

.info-row {
  display: flex;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
}
.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: var(--text-muted);
  width: 140rpx;
  flex-shrink: 0;
}

.info-row .value {
  flex: 1;
  color: var(--text-body);
}

.card-footer {
  padding: 24rpx 32rpx;
  background: var(--bg-section);
  border-radius: 0 0 var(--radius-lg) var(--radius-lg);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tags {
  display: flex;
  gap: 16rpx;
}

.type-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
  background: var(--bg-card);
  color: var(--text-muted);
  border: 1rpx solid var(--border-light);
}

.type-QUOTE_BASED {
  border-color: rgba(59, 130, 246, 0.2);
  color: var(--brand-primary);
  background: var(--brand-light);
}

.type-BLIND {
  border-color: rgba(245, 158, 11, 0.2);
  color: #d97706;
  background: #fef3c7;
}

.labor-fee {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.fee-label {
  font-size: 24rpx;
  color: var(--text-muted);
}

.fee-value {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--status-danger);
  font-family: 'DIN Alternate', sans-serif;
}

.footer-spacer {
  height: env(safe-area-inset-bottom);
}
