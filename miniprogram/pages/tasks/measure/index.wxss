/* 测量数据录入页样式 */
.container {
  height: 100vh;
  background: #141414;
  display: flex;
  flex-direction: column;
}

/* 方案 Tab 栏 */
.variant-tabs {
  background: #1E1E1E;
  padding: 16rpx 32rpx;
}

.tabs-scroll {
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #999;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
}

.tab-item.active {
  color: #E6B450;
  background: rgba(230, 180, 80, 0.15);
}

.tab-item.add-btn {
  color: #4285F4;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 24rpx 32rpx 120rpx;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 窗户卡片 */
.item-card {
  background: #1E1E1E;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.header-left {
  flex: 1;
}

.room-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #FFF;
  margin-bottom: 8rpx;
}

.dimensions {
  font-size: 24rpx;
  color: #999;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
}

/* 卡片内容 */
.card-content {
  padding: 0 32rpx 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
}

.form-row {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.form-row .label {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
}

.form-row .input,
.form-row .picker {
  flex: 1;
  font-size: 28rpx;
  color: #FFF;
  text-align: right;
}

.form-row .textarea {
  flex: 1;
  font-size: 28rpx;
  color: #FFF;
  min-height: 120rpx;
}

.form-row-group {
  display: flex;
  gap: 24rpx;
}

.form-row.half {
  flex: 1;
  flex-direction: column;
  align-items: flex-start;
}

.form-row.half .label {
  width: auto;
  margin-bottom: 16rpx;
}

.form-row.half .input {
  width: 100%;
  text-align: left;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
}

.delete-btn {
  margin-top: 24rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #EA4335;
  background: rgba(234, 67, 53, 0.1);
  border-radius: 8rpx;
}

/* 添加窗户按钮 */
.add-item-btn {
  padding: 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #4285F4;
  background: rgba(66, 133, 244, 0.1);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

/* 照片区域 */
.photo-section {
  margin-top: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFF;
  margin-bottom: 24rpx;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.photo-item image {
  width: 100%;
  height: 100%;
}

.photo-item.add-photo {
  background: rgba(255, 255, 255, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  color: #666;
}

.remove-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #FFF;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #1E1E1E;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
}

.submit-btn {
  width: 100%;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #141414;
  background: #E6B450;
  border-radius: 12rpx;
  border: none;
}

.submit-btn[disabled] {
  opacity: 0.5;
}
