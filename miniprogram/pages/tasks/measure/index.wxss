/* pages/tasks/measure/index.wxss */
.container {
  height: 100vh;
  background-color: var(--bg-page);
  display: flex;
  flex-direction: column;
}

/* Variant Tabs */
.variant-tabs {
  background: var(--bg-card);
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-light);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  z-index: 10;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-inner {
  padding: 0 32rpx;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: var(--text-muted);
  background: var(--bg-section);
  border-radius: 99rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: var(--brand-primary);
  background: var(--brand-light);
  font-weight: bold;
}

.tab-item.add-btn {
  color: var(--brand-primary);
  background: var(--bg-section);
  border: 1rpx dashed var(--brand-primary);
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* Content */
.content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* Item Card */
.item-card {
  padding: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: var(--bg-card);
}

.expanded .card-header {
  border-bottom: 1rpx solid var(--border-light);
  background: var(--bg-section);
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-heading);
}

.dimensions {
  font-size: 26rpx;
  color: var(--text-muted);
}

.expand-icon {
  font-size: 24rpx;
  color: var(--text-muted);
}

.card-content {
  padding: 32rpx;
  background: var(--bg-card);
}

.form-group {
  background: var(--bg-section);
  border-radius: var(--radius-md);
  margin-bottom: 24rpx;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.form-item:last-child {
  border-bottom: none;
}

.form-item-vertical {
  flex-direction: column;
  align-items: flex-start;
  gap: 16rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-heading);
  min-width: 140rpx;
}

.form-input, .picker-value {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: var(--text-body);
}

.form-item-vertical .form-input, 
.form-item-vertical .picker-value {
  text-align: left;
  width: 100%;
}

.placeholder {
  color: var(--text-placeholder);
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: var(--text-body);
}

.form-row-group {
  display: flex;
  gap: 24rpx;
}

.half-group {
  flex: 1;
}

.switch-item {
  padding: 16rpx 24rpx;
}

.delete-btn-wrap {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.btn-delete {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #fee2e2;
  color: var(--status-danger);
  border-radius: var(--radius-md);
  font-size: 26rpx;
}

/* Add Button */
.add-item-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 32rpx;
  background: var(--bg-card);
  color: var(--brand-primary);
  border-radius: var(--radius-lg);
  font-size: 30rpx;
  font-weight: 500;
  border: 2rpx dashed var(--brand-primary);
  margin-bottom: 32rpx;
}

.add-item-btn-hover {
  background: var(--brand-light);
}

/* Photo Section */
.photo-section {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-heading);
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: var(--brand-primary);
  border-radius: 4rpx;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  position: relative;
  background: var(--bg-section);
}

.photo-item image {
  width: 100%;
  height: 100%;
}

.add-photo {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed var(--border-light);
  color: var(--text-placeholder);
}

.add-photo .add-icon {
  font-size: 64rpx;
  font-weight: 300;
}

.remove-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-spacer {
  height: 160rpx;
}

/* Footer */
.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  padding: 24rpx 32rpx;
  background: var(--bg-card);
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.btn-submit {
  width: 100%;
  margin: 0;
}
