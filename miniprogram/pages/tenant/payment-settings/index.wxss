/* pages/tenant/payment-settings/index.wxss */
.container {
    padding: 32rpx;
    background-color: var(--bg-page);
    min-height: 100vh;
    box-sizing: border-box;
}

.page-header {
    margin-bottom: 40rpx;
}
.title {
    font-size: 40rpx;
    font-weight: bold;
    color: var(--text-heading);
    display: block;
}
.desc {
    font-size: 28rpx;
    color: var(--text-muted);
    margin-top: 8rpx;
    display: block;
}

.card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 40rpx;
    box-shadow: var(--shadow-sm);
    margin-bottom: 32rpx;
}

.section-header {
    margin-bottom: 24rpx;
}

.label-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

.label {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--text-heading);
}

.caption {
    font-size: 24rpx;
    color: var(--text-muted);
}

.form-label {
    font-size: 28rpx;
    font-weight: 500;
    color: var(--text-body);
    margin-bottom: 16rpx;
    display: block;
}

.input-textarea {
    width: 100%;
    height: 240rpx;
    background: var(--bg-section);
    border-radius: var(--radius-md);
    padding: 24rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: var(--text-body);
    line-height: 1.5;
    border: 2rpx solid transparent;
    transition: all 0.3s;
}

.input-textarea:focus {
    border-color: var(--brand-primary);
    background: var(--bg-card);
    box-shadow: 0 0 0 4rpx var(--bg-primary-light);
}

.disabled-section {
    opacity: 0.6;
    pointer-events: none;
}

.footer-action {
    margin-top: 48rpx;
}

.primary-btn {
    width: 100%;
    height: 96rpx;
    background: var(--brand-primary);
    border-radius: 999rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.3);
}

.primary-btn:active {
    opacity: 0.9;
    transform: scale(0.98);
}
