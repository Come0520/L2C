/* pages/tenant/payment-settings/index.wxss */
.container {
    padding: 32rpx;
    background-color: #fdfbf7;
    min-height: 100vh;
}

.page-header {
    margin-bottom: 40rpx;
}
.title {
    font-size: 40rpx;
    font-weight: 800;
    color: #334155;
    display: block;
}
.desc {
    font-size: 28rpx;
    color: #94a3b8;
    margin-top: 8rpx;
}

.card {
    background: #fff;
    border-radius: 40rpx;
    padding: 40rpx;
    box-shadow: 
        12rpx 12rpx 24rpx rgba(168, 162, 158, 0.1),
        -12rpx -12rpx 24rpx rgba(255, 255, 255, 0.9);
    margin-bottom: 32rpx;
}

.section-header {
    margin-bottom: 24rpx;
}

.label-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

.label {
    font-size: 32rpx;
    font-weight: 700;
    color: #334155;
}

.caption {
    font-size: 24rpx;
    color: #94a3b8;
}

.input-textarea {
    width: 100%;
    height: 240rpx;
    background: #fdfbf7;
    border-radius: 24rpx;
    padding: 24rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #334155;
    line-height: 1.5;
    /* Inset shadow for input */
    box-shadow: 
        inset 4rpx 4rpx 8rpx rgba(168, 162, 158, 0.1),
        inset -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.8);
}

.disabled-section {
    opacity: 0.6;
    pointer-events: none;
}

.btn-save {
    background: linear-gradient(135deg, #f43f5e, #f97316);
    color: white;
    border-radius: 999rpx;
    font-weight: 700;
    margin-top: 40rpx;
    box-shadow: 
        8rpx 8rpx 16rpx rgba(244, 63, 94, 0.25),
        -4rpx -4rpx 8rpx rgba(255, 255, 255, 0.5);
}
