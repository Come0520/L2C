<!--pages/users/edit/edit.wxml-->
<view class="container">
  <view class="card form-card animate-slide-up">
    <view class="avatar-wrapper">
      <button class="avatar-btn" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar">
        <image class="avatar-img" src="{{userInfo.avatarUrl || '/assets/default-avatar.png'}}" mode="aspectFill"></image>
      </button>
      <text class="avatar-tip">点击修改头像</text>
    </view>

    <view class="input-item">
      <text class="label">昵称</text>
      <input type="nickname" class="input" placeholder="请输入昵称" value="{{userInfo.name}}" bindinput="onNameInput"/>
    </view>

    <button class="primary-btn mt-48" loading="{{submitting}}" bindtap="onSave" hover-class="btn-hover">保存修改</button>
  </view>
</view>
