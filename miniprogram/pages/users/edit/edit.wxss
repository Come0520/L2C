/* pages/users/edit/edit.wxss */
.container {
  min-height: 100vh;
  background: var(--bg-page);
  padding: 32rpx;
  color: var(--text-body);
  box-sizing: border-box;
}

.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  padding: 60rpx 40rpx;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-btn {
  padding: 0;
  background: var(--bg-section);
  border: none;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.avatar-btn::after { border: none; }

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-tip {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: var(--text-muted);
}

.input-item {
  margin-bottom: 48rpx;
}

.label {
  font-size: 28rpx;
  color: var(--text-heading);
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.input {
  background: var(--bg-section);
  height: 96rpx;
  border-radius: var(--radius-md);
  padding: 0 32rpx;
  color: var(--text-heading);
  font-size: 30rpx;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.input:focus {
  border-color: var(--brand-primary);
  background: var(--bg-card);
  box-shadow: 0 0 0 4rpx var(--bg-primary-light);
}

.mt-48 { margin-top: 48rpx; }

.primary-btn {
  width: 100%;
  height: 96rpx;
  background: var(--brand-primary);
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.3);
  transition: all 0.3s;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 动画 */
.animate-slide-up {
  opacity: 0;
  animation: slideUp 0.5s ease-out forwards;
  transform: translateY(20rpx);
}

@keyframes slideUp {
  to { opacity: 1; transform: translateY(0); }
}
