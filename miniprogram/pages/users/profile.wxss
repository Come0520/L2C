/* 个人中心 - 简洁专业版 */
.profile-page {
  padding-top: 32rpx;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  padding: 32rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  flex-shrink: 0;
  border: 4rpx solid var(--brand-light);
}

.user-meta {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-heading);
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-role {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.role-tag {
  font-size: 24rpx;
  color: var(--text-muted);
}

.edit-icon {
  flex-shrink: 0;
}

.arrow-icon {
  font-size: 36rpx;
  color: var(--text-muted);
}

/* 统计卡片 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx 24rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-heading);
}

.stat-value.primary {
  color: var(--brand-primary);
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-muted);
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background: var(--border-main);
}

/* 菜单卡片 */
.menu-card {
  padding: 8rpx 0;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  transition: background 0.15s ease;
}

.menu-item:active {
  background: var(--bg-section);
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon-box.blue { background: #EFF6FF; }
.menu-icon-box.green { background: #F0FDF4; }
.menu-icon-box.orange { background: #FFF7ED; }
.menu-icon-box.purple { background: #FAF5FF; }

.menu-icon {
  width: 32rpx;
  height: 32rpx;
}

.menu-label {
  font-size: 28rpx;
  color: var(--text-heading);
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--text-muted);
}

/* 分享卡片 */
.share-card {
  padding: 0;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  width: 100%;
  height: auto;
  padding: 28rpx 0;
  background: transparent;
  border: none;
  color: var(--brand-primary);
  font-size: 28rpx;
  font-weight: 500;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 退出登录 */
.logout-section {
  padding: 32rpx 0;
}

.btn-logout {
  width: 100%;
  background: transparent;
  color: var(--status-danger);
  font-size: 28rpx;
  padding: 28rpx 0;
  border-radius: var(--radius-md);
  border: 1rpx solid #FEE2E2;
  font-weight: 500;
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #FEF2F2;
}
