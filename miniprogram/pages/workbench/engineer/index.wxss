/* pages/workbench/engineer/index.wxss */
.container {
    background: var(--bg-page);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.header {
    padding: 30rpx;
    background: var(--bg-card);
    font-size: 36rpx;
    font-weight: bold;
    color: var(--text-heading);
}

.tabs {
    display: flex;
    background: var(--bg-card);
    border-bottom: 1rpx solid var(--border-light);
}

.tab {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    color: var(--text-muted);
    position: relative;
    font-size: 28rpx;
    transition: color 0.2s;
}

.tab.active {
    color: var(--text-heading);
    font-weight: 600;
}
.tab.active::after {
    content: '';
    position: absolute;
    bottom: 0; left: 30%; right: 30%;
    height: 4rpx;
    background: var(--brand-primary);
    border-radius: 4rpx;
}

.task-list {
    flex: 1;
    padding: 24rpx;
    box-sizing: border-box;
}

.task-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: var(--shadow-sm);
}

.card-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.task-no { font-weight: 600; color: var(--text-heading); }

/* 状态标签 - 使用语义化的淡色背景 */
.status { font-size: 24rpx; padding: 4rpx 12rpx; border-radius: 8rpx; background: var(--bg-section); color: var(--text-muted); }
.status.PENDING_ACCEPT { background: rgba(245, 158, 11, 0.1); color: var(--color-warning); }
.status.IN_PROGRESS { background: rgba(79, 70, 229, 0.1); color: var(--brand-primary); }
.status.COMPLETED { background: rgba(16, 185, 129, 0.1); color: var(--color-success); }

.row { display: flex; font-size: 26rpx; margin-bottom: 12rpx; }
.row .label { color: var(--text-muted); width: 100rpx; flex-shrink: 0; }
.row .value { color: var(--text-body); }
.row .value.address { flex: 1; }
.row .value.time { color: var(--text-heading); font-weight: 500; }

.empty { text-align: center; padding: 60rpx; color: var(--text-muted); }
