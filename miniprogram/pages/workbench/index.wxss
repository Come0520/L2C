/* 工作台 - 简洁专业版 */
.workbench-page {
  padding-top: 32rpx;
  padding-bottom: 120rpx;
}

/* 头部问候 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.greeting-text {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-heading);
  margin-bottom: 4rpx;
}

.greeting-date {
  display: block;
  font-size: 24rpx;
  color: var(--text-muted);
}

.header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid var(--border-main);
}

/* 数据概览网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  background: var(--bg-card);
  border: 1rpx solid var(--border-main);
  border-radius: var(--radius-md);
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-heading);
}

.stat-num.primary {
  color: var(--brand-primary);
}

.stat-desc {
  font-size: 22rpx;
  color: var(--text-muted);
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-bottom: 40rpx;
  padding: 24rpx;
  background: var(--bg-card);
  border: 1rpx solid var(--border-main);
  border-radius: var(--radius-md);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(25% - 18rpx);
  gap: 12rpx;
}

.action-icon-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon-box.blue { background: #EFF6FF; }
.action-icon-box.purple { background: #FAF5FF; }
.action-icon-box.green { background: #F0FDF4; }
.action-icon-box.orange { background: #FFF7ED; }
.action-icon-box.teal { background: #F0FDFA; }

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-text {
  font-size: 22rpx;
  color: var(--text-body);
  text-align: center;
  line-height: 1.3;
}

/* 待办列表 */
.todo-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.todo-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 0;
}

.todo-main {
  flex: 1;
  min-width: 0;
  margin-right: 24rpx;
}

.todo-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-heading);
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-desc {
  font-size: 24rpx;
  color: var(--text-muted);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.todo-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
  flex-shrink: 0;
}

.todo-time {
  font-size: 22rpx;
  color: var(--text-muted);
}
