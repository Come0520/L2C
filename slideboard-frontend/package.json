{
  "name": "slideboard-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "clean:unused": "npx knip",
    "pre-commit": "lint-staged",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:reset": "npx supabase db reset",
    "supabase:generate-types": "npx supabase gen types typescript --local > src/types/supabase.ts",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci:upload": "lhci upload",
    "lhci:autorun": "lhci autorun",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=json",
    "performance:test": "node scripts/run-performance-test.js",
    "performance:report": "open lighthouse-results",
    "analyze": "ANALYZE=true next build",
    "analyze:size": "bundlesize",
    "generate": "plop",
    "generate:api-types": "openapi-typescript docs/openapi.yaml -o src/shared/types/api-schema.ts",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "e2e:report": "npx playwright show-report",
    "e2e:chromium": "npx playwright test --project=chromium",
    "e2e:firefox": "npx playwright test --project=firefox",
    "e2e:webkit": "npx playwright test --project=webkit",
    "prepare": "husky"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@hookform/resolvers": "^3.10.0",
    "@sentry/nextjs": "^8.55.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.86.0",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-virtual": "^3.13.12",
    "clsx": "^2.0.0",
    "framer-motion": "^12.23.25",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.555.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.66.1",
    "recharts": "^3.5.0",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^16.0.7",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query-devtools": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "babel-plugin-react-compiler": "^1.0.0",
    "bundlesize": "^0.18.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "lint-staged": "^15.0.0",
    "openapi-typescript": "^7.10.1",
    "plop": "^4.0.4",
    "postcss": "^8.5.6",
    "stylelint": "^16.9.0",
    "supabase": "^2.63.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/**/*.js",
      "maxSize": "500 kB"
    },
    {
      "path": ".next/static/css/**/*.css",
      "maxSize": "100 kB"
    }
  ]
}