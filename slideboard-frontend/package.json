{
  "name": "slideboard-frontend",
  "version": "1.1.1",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "npm run monitor:locale-size && next build",
    "start": "next start",
    "lint": "pnpm run lint:eslint",
    "lint:eslint": "eslint .",
    "typecheck": "tsc --noEmit",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "clean:unused": "pnpm dlx knip",
    "pre-commit": "lint-staged",
    "monitor:locale-size": "node scripts/monitor-locale-size.js",
    "supabase:start": "pnpm exec supabase start",
    "supabase:stop": "pnpm exec supabase stop",
    "supabase:reset": "pnpm exec supabase db reset",
    "supabase:generate-types": "pnpm exec supabase gen types typescript --local > src/types/supabase.ts",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci:upload": "lhci upload",
    "lhci:autorun": "lhci autorun",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=json",
    "performance:test": "node scripts/run-performance-test.js",
    "performance:report": "open lighthouse-results",
    "analyze": "ANALYZE=true next build",
    "analyze:size": "bundlesize",
    "generate": "plop",
    "generate:api-types": "openapi-typescript docs/openapi.yaml -o src/shared/types/api-schema.ts",
    "e2e": "pnpm exec playwright test",
    "e2e:ui": "pnpm exec playwright test --ui",
    "e2e:report": "pnpm exec playwright show-report",
    "e2e:chromium": "pnpm exec playwright test --project=chromium",
    "e2e:firefox": "pnpm exec playwright test --project=firefox",
    "e2e:webkit": "pnpm exec playwright test --project=webkit",
    "prepare": "husky"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@hookform/resolvers": "^3.10.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@react-three/rapier": "^2.2.0",
    "@sentry/nextjs": "^10.30.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.87.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/three": "^0.182.0",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.26",
    "gray-matter": "^4.0.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.555.0",
    "marked": "^17.0.1",
    "next": "^16.0.10",
    "next-safe-action": "^8.0.11",
    "nuqs": "^2.8.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.66.1",
    "recharts": "^2.15.4",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.182.0",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.0.0",
    "@faker-js/faker": "^10.1.0",
    "@next/bundle-analyzer": "^16.0.7",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "4.0.15",
    "bundlesize": "^0.18.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.9",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.3.0",
    "knip": "^5.71.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "supabase": "^2.66.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": ".next/static/chunks/**/*.js",
      "maxSize": "500 kB"
    },
    {
      "path": ".next/static/css/**/*.css",
      "maxSize": "100 kB"
    }
  ]
}