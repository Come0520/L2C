{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    ".next-test/types/**/*.ts",
    ".next-test/dev/types/**/*.ts",
    ".next-test-2/types/**/*.ts",
    ".next-test-2/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "drizzle",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/e2e/**",
    "seed*.ts",
    "scripts",
    "miniprogram",
    "servers/**/*"
  ]
}